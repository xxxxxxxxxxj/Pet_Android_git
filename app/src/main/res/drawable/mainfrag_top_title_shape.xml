<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="720" android:endColor="@color/a3a3636" android:startColor="@color/a3a3636" />

            <corners android:radius="4dip" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/a3a3636" android:startColor="@color/a3a3636" />

            <corners android:radius="4dip" />
        </shape></item>
    <item><shape>
            <gradient android:angle="180" android:endColor="#434040" android:startColor="#434040" />

            <corners android:radius="4dip" />
        </shape></item>

</selector>