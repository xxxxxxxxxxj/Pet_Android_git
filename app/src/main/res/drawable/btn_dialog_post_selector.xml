<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="720" android:endColor="#45a641" android:startColor="#45a641" />

            <corners android:radius="4dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#45a641" android:startColor="#45a641" />

            <corners android:radius="2dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="180" android:endColor="@color/orange" android:startColor="@color/orange" />

            <corners android:radius="4dp" />
        </shape></item>

</selector>