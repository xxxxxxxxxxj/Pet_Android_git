<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="720" android:endColor="#e3e3e3" android:startColor="#e3e3e3" />


            <padding android:bottom="1dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#e3e3e3" android:startColor="#e3e3e3" />


            <padding android:bottom="1dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>
    <item><shape>
        <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />
        

            <padding android:bottom="1dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>

</selector>