<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dip"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/bg_gray_round_66000000"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    >
    <LinearLayout 
        android:layout_width="130dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dip"
        android:paddingBottom="8dip"
        android:paddingLeft="10dip"
        >
        <TextView 
            android:id="@+id/tv_location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView 
            android:id="@+id/tv_location_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="addr"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="3dip"
            />
    </LinearLayout>
    <View 
        android:layout_width="0.8dip"
        android:layout_height="35dip"
        android:background="@color/white"
        android:layout_marginLeft="5dip"
        />
    <LinearLayout 
        android:id="@+id/ll_location_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingRight="10dip"
        android:paddingLeft="5dip"
        >
    <ImageButton 
        android:layout_width="21dip"
        android:layout_height="19dip"
        android:scaleType="fitXY"
        android:background="@drawable/icon_navigation_blue"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="导航"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginLeft="3dip"
        />
        
    </LinearLayout>

</LinearLayout>
