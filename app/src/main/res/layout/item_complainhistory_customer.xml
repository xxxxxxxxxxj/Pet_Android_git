<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="投诉问题"
                android:textColor="@color/a333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_item_complainthistorycustomer_tssj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="textview"
                android:textColor="@color/a333333"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#d3d3d3" />

        <com.haotang.pet.view.MListview
            android:id="@+id/mlv_item_complainthistorycustomer_tswt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/f8f8ff8"
            android:dividerHeight="0dip"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="15dip"
            android:background="#d3d3d3" />

        <TextView
            android:id="@+id/tv_item_complainthistorycustomer_title"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:paddingLeft="15dip"
            android:text="处理结果"
            android:textColor="@color/aBB996C"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_complainthistorycustomer_cljg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:paddingLeft="15dip"
            android:text="正在处理中,请您耐心等候..."
            android:textColor="@color/aBB996C"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>