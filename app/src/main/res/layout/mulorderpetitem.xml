<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.haotang.pet.view.SelectableRoundedImageView 
        android:id="@+id/mul_petimg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/dog_icon_unnew" 
        custom:sriv_left_top_corner_radius="5dip"
        custom:sriv_right_top_corner_radius="5dip"
        custom:sriv_left_bottom_corner_radius="5dip"
        custom:sriv_right_bottom_corner_radius="5dip"
        />

    <TextView
        android:id="@+id/tv_mulorderpetitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/mul_petimg"
        android:textColor="@color/a333333"
        android:textSize="16sp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:text=" " />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_mulorderpetitem_name"
        android:layout_below="@+id/tv_mulorderpetitem_name"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        >
		
        <TextView
            android:id="@+id/tv_mulorderpetitem_service_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务方式：上门服务"
            android:textColor="@color/a666666"
            android:textSize="14sp" />
		<TextView 
		    android:id="@+id/textview_vie"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
		    android:text="即时预约"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/a666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_mulorderpetitem_totalfee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="0"
                android:textColor="@color/a666666"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vBottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:background="@color/bggray"
        />

</RelativeLayout>