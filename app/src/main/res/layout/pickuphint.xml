<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/rl_pickuphint_main"
    android:background="#99000000"
    >
    
    <RelativeLayout 
        android:id="@+id/rl_pickuphint_content"
        android:layout_width="match_parent"
        android:layout_height="400dip"
        android:background="@drawable/bg_white_round"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        >
        <TextView
            android:id="@+id/tv_pickuphint_title" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接送服务温馨提示"
            android:textSize="18sp"
            android:textColor="@color/a222222"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            />
        <View 
            android:id="@+id/view_pickuphint_top"
            android:layout_width="match_parent"
            android:layout_height="0.8dip"
            android:background="@color/bordergray"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="15dip"
            android:layout_below="@+id/tv_pickuphint_title"
            />
        <ScrollView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="5dip"
            android:layout_below="@+id/view_pickuphint_top"
            android:layout_above="@+id/view_pickuphint_bottom"
            >
            <LinearLayout 
                android:id="@+id/ll_pickuphint_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                
            </LinearLayout>
        </ScrollView>
        <View 
            android:id="@+id/view_pickuphint_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.8dip"
            android:background="@color/bordergray"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginBottom="15dip"
            android:layout_above="@+id/bt_pickuphint_submit"
            />
        
        <Button 
            android:id="@+id/bt_pickuphint_submit"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:text="我知道了"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_orange"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="25dip"
            />
    </RelativeLayout>

</RelativeLayout>
