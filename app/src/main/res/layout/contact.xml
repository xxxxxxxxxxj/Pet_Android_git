<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/bggray"
    >
    <include layout="@layout/titlebar2"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="15dip"
        android:paddingLeft="10dip"
        android:orientation="vertical"
        >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="60dip"
            >
            <TextView 
            android:id="@+id/tv_contact_namepre"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="联系人"
            android:textSize="18sp"
            android:textColor="@color/a777777"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            />
        <com.haotang.pet.view.ClearEditText 
            android:id="@+id/cet_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/a777777"
            android:textColorHint="@color/acccccc"
            android:layout_marginLeft="10dip"
            android:singleLine="true"
            android:layout_toRightOf="@+id/tv_contact_namepre"
            android:layout_alignTop="@+id/tv_contact_namepre"
            android:layout_alignBottom="@+id/tv_contact_namepre"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:gravity="center_vertical"
            android:maxLength="6"
            />
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/bordergray"
            />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="60dip"
            >
            <TextView 
            android:id="@+id/tv_contact_phonepre"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机号"
            android:textSize="18sp"
            android:textColor="@color/a777777"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            />
        <com.haotang.pet.view.ClearEditText  
            android:id="@+id/cet_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/a777777"
            android:textColorHint="@color/acccccc"
            android:layout_marginLeft="10dip"
            android:singleLine="true"
            android:layout_toRightOf="@+id/tv_contact_phonepre"
            android:layout_alignTop="@+id/tv_contact_phonepre"
            android:layout_alignBottom="@+id/tv_contact_phonepre"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:gravity="center_vertical"
            android:phoneNumber="true"
            android:maxLength="11"
            />
        
        </RelativeLayout>
        
    </LinearLayout>
    

</LinearLayout>
