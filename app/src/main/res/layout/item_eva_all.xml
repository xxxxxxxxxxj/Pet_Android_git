<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/item_eva_layout" >

    <!-- 抽出评价布局 后期将洗澡美容服务详情页 以此布局替换统一 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bggray" />
    <LinearLayout
        android:id="@+id/ll_servicedetail_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="2dip"
        android:paddingTop="2dip" >

        <TextView
            android:id="@+id/tv_servicedetail_goodcomments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="好评率"
            android:textColor="@color/a9b9b9b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_servicedetail_badcomments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dip"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="评分"
            android:textColor="@color/a9b9b9b"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_servicedetail_allcomments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="全部评论"
                android:textColor="@color/a9b9b9b"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="25dip"
                android:layout_height="30dip"
                android:background="@drawable/icon_rightarrow"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/bggray" />

    <LinearLayout
        android:id="@+id/service_layout_eva_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical" >

        <com.haotang.pet.view.SelectableRoundedImageView
            android:id="@+id/service_eva_one"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_icon_unnet"
            custom:sriv_left_bottom_corner_radius="30dip"
            custom:sriv_left_top_corner_radius="30dip"
            custom:sriv_right_bottom_corner_radius="30dip"
            custom:sriv_right_top_corner_radius="30dip" />

        <TextView
            android:id="@+id/textView_service_eva_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=" "
            android:textColor="@color/a9b9b9b" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/service_layout_eva_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bggray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp" >

            <com.haotang.pet.view.SelectableRoundedImageView
                android:id="@+id/service_eva_two"
                android:layout_width="44dip"
                android:layout_height="44dip"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_icon_unnet"
                custom:sriv_left_bottom_corner_radius="30dip"
                custom:sriv_left_top_corner_radius="30dip"
                custom:sriv_right_bottom_corner_radius="30dip"
                custom:sriv_right_top_corner_radius="30dip" />

            <TextView
                android:id="@+id/textView_service_eva_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=" "
                android:textColor="@color/a9b9b9b" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>