<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/af8f8f8">

    <RelativeLayout
        android:id="@+id/layout_go_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:padding="10dp"
        >

        <Button
            android:id="@+id/button_go_apponit_train"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/service_button_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_button_service_apponit_ok"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:paddingTop="3dp"
            android:text="预约"
            android:textColor="@color/white"
            android:textSize="@dimen/item_service_appoinment_yue" />
        <LinearLayout 
            android:id="@+id/layout_button_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="bottom"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/button_go_apponit_train">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/aD1494F"
                android:textSize="12sp"
                />
            <TextView 
                android:id="@+id/service_open_train_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@color/aD1494F"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_toLeftOf="@+id/layout_button_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/service_open_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/a333333"
                android:text=" "/>
            <TextView 
                android:id="@+id/service_open_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/a666666"
                android:text=" "/>
        </LinearLayout>
    </RelativeLayout>
	<View 
	    android:id="@+id/train_video_more_line"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/aDDDDDD"/>
</LinearLayout>