<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_pop_selectphoto_parent"
    android:layout_width="match_parent"
    android:layout_height="400dip"
    android:background="#99000000" >

    <LinearLayout
        android:id="@+id/ll_pop_selectphoto"
        android:layout_width="match_parent"
        android:layout_height="110dip"
        android:layout_marginBottom="15dip"
        android:background="#99000000"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_pop_selectphoto_camera"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#99000000"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="53dip"
                android:layout_height="53dip"
                android:background="@drawable/umeng_socialize_wechat"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="拍照"
                android:textColor="@color/a666666"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pop_selectphoto_photo"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#99000000"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="53dip"
                android:layout_height="53dip"
                android:background="@drawable/umeng_socialize_wxcircle"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="相册"
                android:textColor="@color/a666666"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pop_selectphoto_video"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#99000000"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="53dip"
                android:layout_height="53dip"
                android:background="@drawable/umeng_socialize_qq"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:text="视频"
                android:textColor="@color/a666666"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>