<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pop_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="${relativePackage}.${activityClass}" >

    <GridView
        android:id="@+id/gv_dropmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:cacheColorHint="#00000000"
        android:fadeScrollbars="true"
        android:horizontalSpacing="10dip"
        android:listSelector="@android:color/transparent"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="10dip" >
    </GridView>

    <RelativeLayout
        android:id="@+id/rl_dropmenu_sq"
        android:layout_width="50dip"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:layout_width="20dip"
            android:layout_height="9dip"
            android:layout_centerInParent="true"
            android:src="@drawable/shouqi" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dropmenu_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/iv_dropmenu_no"
            android:layout_width="52dip"
            android:layout_height="50dip"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dip"
            android:src="@drawable/noarea" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_dropmenu_no"
            android:layout_centerHorizontal="true"
            android:text="其他区域只支持到店服务"
            android:textColor="@color/a666666"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>