<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     >
     
     <ScrollView 
         android:id="@+id/sv_petinfo_main"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         >
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             
             >
             <com.haotang.pet.view.MChangeView 
                 android:id="@+id/mcv_petinfo_image"
                 android:layout_width="match_parent"
                 android:layout_height="200dip"
                 android:background="@drawable/bg_petinfo"
                 >
                 <RelativeLayout 
                     android:id="@+id/rl_petinfo_leftimage"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
			        android:layout_alignParentLeft="true"
			        android:layout_marginLeft="20dip"
                     >
                 <com.haotang.pet.view.SelectableRoundedImageView 
			        android:id="@+id/sriv_petinfo_image_left"
			        android:layout_width="30dip"
			        android:layout_height="30dip"
			        android:scaleType="fitXY"
			        android:src="@drawable/icon_production_default"
			        custom:sriv_left_top_corner_radius="2dip"
			        custom:sriv_right_top_corner_radius="2dip"
			        custom:sriv_left_bottom_corner_radius="2dip"
			        custom:sriv_right_bottom_corner_radius="2dip"
			        
			        />
                   <View 
                       android:layout_width="30dip"
                       android:layout_height="30dip"
                       android:background="@drawable/bg_transparent_round"
                       />
                 </RelativeLayout>
                 <RelativeLayout 
                     android:id="@+id/rl_petinfo_rightimage"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
			        android:layout_alignParentRight="true"
			        android:layout_marginRight="20dip"
                     >
                 <com.haotang.pet.view.SelectableRoundedImageView 
			        android:id="@+id/sriv_petinfo_image_right"
			        android:layout_width="30dip"
			        android:layout_height="30dip"
			        android:scaleType="fitXY"
			        android:src="@drawable/icon_production_default"
			        custom:sriv_left_top_corner_radius="2dip"
			        custom:sriv_right_top_corner_radius="2dip"
			        custom:sriv_left_bottom_corner_radius="2dip"
			        custom:sriv_right_bottom_corner_radius="2dip"
			        
			        />
                     <View 
                       android:layout_width="30dip"
                       android:layout_height="30dip"
                       android:background="@drawable/bg_transparent_round"
                       />
                 </RelativeLayout>
                 
                 <com.haotang.pet.view.SelectableRoundedImageView 
			        android:id="@+id/sriv_petinfo_image_center"
			        android:layout_width="80dip"
			        android:layout_height="80dip"
			        android:scaleType="fitXY"
			        android:src="@drawable/icon_production_default"
			        custom:sriv_left_top_corner_radius="5dip"
			        custom:sriv_right_top_corner_radius="5dip"
			        custom:sriv_left_bottom_corner_radius="5dip"
			        custom:sriv_right_bottom_corner_radius="5dip"
			        android:layout_centerInParent="true"
			        />
                 <ImageView 
                     android:layout_width="30dip"
                     android:layout_height="30dip"
                     android:scaleType="fitXY"
                     android:background="@drawable/icon_pet_edit"
                     android:layout_alignRight="@+id/sriv_petinfo_image_center"
                     android:layout_alignBottom="@+id/sriv_petinfo_image_center"
                     />
                 <TextView 
                     android:id="@+id/tv_petinfo_petname"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="asfas"
                     android:textSize="18sp"
                     android:textColor="@color/white"
                     android:maxEms="3"
                     android:ellipsize="end"
                     android:singleLine="true"
                     android:layout_below="@+id/sriv_petinfo_image_center"
                     android:layout_centerHorizontal="true"
                     android:layout_marginTop="5dip"
                     />
                 <ImageView 
                     android:id="@+id/iv_petinfo_petsex"
                     android:layout_width="20dip"
                     android:layout_height="20dip"
                     android:layout_toRightOf="@+id/tv_petinfo_petname"
                     android:layout_alignBottom="@+id/tv_petinfo_petname"
                     android:layout_marginLeft="3dip"
                     />
                 <TextView 
                     android:id="@+id/tv_petinfo_petid"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="asfa"
                     android:textSize="16sp"
                     android:textColor="@color/white"
                     android:layout_below="@+id/tv_petinfo_petname"
                     android:layout_centerHorizontal="true"
                     android:layout_marginTop="1dip"
                     />
                 
             </com.haotang.pet.view.MChangeView>
             
             <LinearLayout 
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:background="@color/white"
                 android:paddingTop="15dip"
                 android:paddingBottom="15dip"
                 >
                 <LinearLayout 
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_weight="1"
                     >
                     <TextView 
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="洗澡"
                         android:textSize="18sp"
                         android:textColor="@color/a333333"
                         android:layout_gravity="center"
                         android:gravity="center"
                         />
                     <RelativeLayout 
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dip"
                         >
                         <TextView 
                             android:id="@+id/tv_petinfo_bathnum"
	                         android:layout_width="wrap_content"
	                         android:layout_height="wrap_content"
	                         android:text="0"
	                         android:textSize="22sp"
	                         android:textColor="@color/orange"
	                         android:layout_centerInParent="true"
	                         />
                         <TextView 
	                         android:layout_width="wrap_content"
	                         android:layout_height="wrap_content"
	                         android:text="次"
	                         android:textSize="12sp"
	                         android:textColor="@color/orange"
	                         android:layout_toRightOf="@+id/tv_petinfo_bathnum"
	                         android:layout_alignBaseline="@+id/tv_petinfo_bathnum"
	                         />
                     </RelativeLayout>
                 </LinearLayout>
                 <View 
                     android:layout_width="1dip"
                     android:layout_height="20dip"
                     android:background="@color/bordergray"
                     />
                 <LinearLayout 
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_weight="1"
                     >
                     <TextView 
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="美容"
                         android:textSize="18sp"
                         android:textColor="@color/a333333"
                         android:layout_gravity="center"
                         android:gravity="center"
                         />
                     <RelativeLayout 
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dip"
                         >
                         <TextView 
                             android:id="@+id/tv_petinfo_beautynum"
	                         android:layout_width="wrap_content"
	                         android:layout_height="wrap_content"
	                         android:text="0"
	                         android:textSize="22sp"
	                         android:textColor="@color/orange"
	                         android:layout_centerInParent="true"
	                         />
                         <TextView 
	                         android:layout_width="wrap_content"
	                         android:layout_height="wrap_content"
	                         android:text="次"
	                         android:textSize="12sp"
	                         android:textColor="@color/orange"
	                         android:layout_toRightOf="@+id/tv_petinfo_beautynum"
	                         android:layout_alignBaseline="@+id/tv_petinfo_beautynum"
	                         />
                     </RelativeLayout>
                 </LinearLayout>
                 <View 
                     android:layout_width="1dip"
                     android:layout_height="20dip"
                     android:background="@color/bordergray"
                     />
                 <LinearLayout 
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:layout_weight="1"
                     >
                     <TextView 
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="寄养"
                         android:textSize="18sp"
                         android:textColor="@color/a333333"
                         android:layout_gravity="center"
                         android:gravity="center"
                         />
                     <RelativeLayout 
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dip"
                         >
                         <TextView 
                             android:id="@+id/tv_petinfo_fostercarenum"
	                         android:layout_width="wrap_content"
	                         android:layout_height="wrap_content"
	                         android:text="0"
	                         android:textSize="22sp"
	                         android:textColor="@color/orange"
	                         android:layout_centerInParent="true"
	                         />
                         <TextView 
	                         android:layout_width="wrap_content"
	                         android:layout_height="wrap_content"
	                         android:text="天"
	                         android:textSize="12sp"
	                         android:textColor="@color/orange"
	                         android:layout_toRightOf="@+id/tv_petinfo_fostercarenum"
	                         android:layout_alignBaseline="@+id/tv_petinfo_fostercarenum"
	                         />
                     </RelativeLayout>
                 </LinearLayout>
                 
             </LinearLayout>
             
             <RelativeLayout 
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="0dip"
                 >
                 <View 
                     android:id="@+id/view_petinfo_1"
                     android:layout_width="1dip"
                     android:layout_height="1dip"
                     android:layout_centerInParent="true"
                     />
                 
                 <FrameLayout
                     android:id="@+id/fl_petinfo_clean"
			        android:layout_width="120dip"
			        android:layout_height="120dip"
			        android:layout_toLeftOf="@+id/view_petinfo_1"
			        android:layout_marginRight="15dip"
			        android:padding="2dip"
			        android:background="@drawable/bg_gray_circle"
			        >
			
				        <com.haotang.pet.view.ColorfulRingProgressView
				            android:id="@+id/cpv_petinfo_cleannum"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            custom:bgColor="@color/acccccc"
				            custom:fgColorEnd="#ff4800"
				            custom:fgColorStart="#ffe400"
				            custom:percent="0"
				            custom:startAngle="30"
				            custom:strokeWidth="10dip" />
				        <LinearLayout 
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:orientation="horizontal"
				            android:layout_gravity="center"
				            android:gravity="center"
				            >
					        <TextView
					            android:id="@+id/tv_petinfo_cleannum"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="bottom"
					            android:text="0"
					            android:textColor="@color/a9b9b9b"
					            android:paddingBottom="3dip"
					            android:textSize="22sp" />
					        <TextView
					            android:id="@+id/tv_petinfo_cleannum_unit"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="bottom"
					            android:text="分"
					            android:textColor="@color/a9b9b9b"
					            android:textSize="14sp" />
				            
				        </LinearLayout>
				
			    	</FrameLayout>
			    	<TextView 
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:text="清洁值"
	                     android:textColor="@color/a333333"
	                     android:textSize="16sp"
	                     android:gravity="center"
	                     android:layout_below="@+id/fl_petinfo_clean"
	                     android:layout_alignLeft="@+id/fl_petinfo_clean"
	                     android:layout_alignRight="@+id/fl_petinfo_clean"
	                     android:layout_marginTop="5dip"
	                     />
                 <FrameLayout
                     android:id="@+id/fl_petinfo_charm"
			        android:layout_width="120dip"
			        android:layout_height="120dip"
			        android:layout_toRightOf="@+id/view_petinfo_1"
			        android:layout_marginLeft="15dip"
			        android:padding="2dip"
			        android:background="@drawable/bg_gray_circle"
			        >
			
				        <com.haotang.pet.view.ColorfulRingProgressView
				            android:id="@+id/cpv_petinfo_charmnum"
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            custom:bgColor="@color/acccccc"
				            custom:fgColorEnd="#ff4800"
				            custom:fgColorStart="#ffe400"
				            custom:percent="0"
				            custom:startAngle="30"
				            custom:strokeWidth="10dp" />
				        <LinearLayout 
				            android:layout_width="match_parent"
				            android:layout_height="match_parent"
				            android:orientation="horizontal"
				            android:layout_gravity="center"
				            android:gravity="center"
				            >
					        <TextView
					            android:id="@+id/tv_petinfo_charmnum"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="bottom"
					            android:text="0"
					            android:textColor="@color/a9b9b9b"
					            android:paddingBottom="3dip"
					            android:textSize="22sp" />
					        <TextView
					            android:id="@+id/tv_petinfo_charmnum_unit"
					            android:layout_width="wrap_content"
					            android:layout_height="wrap_content"
					            android:gravity="bottom"
					            android:text="分"
					            android:textColor="@color/a9b9b9b"
					            android:textSize="14sp" />
				            
				        </LinearLayout>
				
			    	</FrameLayout>
			    	<TextView 
	                     android:layout_width="wrap_content"
	                     android:layout_height="wrap_content"
	                     android:text="魅力值"
	                     android:textColor="@color/a333333"
	                     android:textSize="16sp"
	                     android:gravity="center"
	                     android:layout_below="@+id/fl_petinfo_charm"
	                     android:layout_alignLeft="@+id/fl_petinfo_charm"
	                     android:layout_alignRight="@+id/fl_petinfo_charm"
	                     android:layout_marginTop="5dip"
	                     />
                 
                 
             </RelativeLayout>
             
             <RelativeLayout 
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 >
             <RelativeLayout 
                 android:id="@+id/rl_petinfo_cleanhint"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@drawable/bg_cleanhint"
                 android:layout_marginLeft="20dip"
                 android:layout_marginRight="20dip"
                 >
                 <TextView 
                     android:id="@+id/tv_petinfo_cleanhint"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:padding="5dip"
                     android:layout_marginLeft="10dip"
                     android:layout_marginRight="15dip"
                     android:layout_marginTop="23dip"
                     android:layout_marginBottom="10dip"
                     android:text=""
                     android:textSize="16sp"
                     android:textColor="@color/acccccc"
                     android:background="@drawable/bg_gray_round"
                     />
                 
             </RelativeLayout>
             <View 
                 android:layout_width="match_parent"
                 android:layout_height="5dip"
                 android:layout_below="@+id/rl_petinfo_cleanhint"
                 />
                 <ImageView 
                     android:id="@+id/iv_petinfo_mood"
                     android:layout_width="36dip"
                     android:layout_height="24dip"
                     android:background="@drawable/icon_mood_1"
                     android:layout_alignParentRight="true"
                     android:layout_marginRight="26dip"
                     android:layout_alignParentBottom="true"
                     />
             
             </RelativeLayout>
             <!-- 添加去洗澡去美容 -->
             
             <LinearLayout 
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_marginTop="10dp"
                 android:paddingBottom="30dp"
                 >
                 <LinearLayout 
                     android:id="@+id/layout_mypetinfo_go_wash"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="match_parent"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"
                     android:gravity="center"
                     android:padding="10dp"
                     android:background="@drawable/bg_search_orangeborder">
                     <ImageView
                         android:id="@+id/imageview_go_wash" 
                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:background="@drawable/icon_petinfo_wash_can"
                         />
                     <TextView 
                         android:id="@+id/textview_go_wash"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textColor="@color/orange"
                         android:text="去洗澡"/>
                 </LinearLayout>
                 <LinearLayout 
                     android:id="@+id/layout_mypetinfo_go_beautiful"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="match_parent"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"
                     android:background="@drawable/bg_cannot_to_beautiful"
                     android:padding="10dp"
                     android:gravity="center">
                     <ImageView
                         android:id="@+id/imageview_mypet_info" 
                         android:layout_width="20dp"
                         android:layout_height="20dp"
                         android:background="@drawable/scissors_orange"
                         />
                     <TextView
                         android:id="@+id/textview_mypet_info" 
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="去美容"/>
                 </LinearLayout>
             </LinearLayout>
             
         </LinearLayout>
         
     </ScrollView>
     
    <include 
        android:id="@+id/rl_null"
        layout="@layout/nullhint"
        android:visibility="gone"
        />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
         >
        <ImageButton 
            android:id="@+id/ib_titlebar_back"
	         android:layout_width="35dp"
	         android:layout_height="35dp"
	         android:scaleType="fitXY"
	         android:background="@drawable/icon_back_gray"
	         android:layout_centerVertical="true"
	         android:layout_marginLeft="3dip"
	         />
        <ImageButton 
            android:id="@+id/ib_titlebar_other"
	         android:layout_width="35dp"
	         android:layout_height="35dp"
	         android:scaleType="fitXY"
	         android:background="@drawable/icon_add_gray"
	         android:layout_centerVertical="true"
	         android:layout_alignParentRight="true"
	         android:layout_marginRight="3dip"
	         />
         
         
    </RelativeLayout>

</RelativeLayout>
