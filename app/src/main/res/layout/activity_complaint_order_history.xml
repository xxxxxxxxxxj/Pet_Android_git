<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <include layout="@layout/titlebar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/lv_complaintorder_histort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@color/f8f8ff8"
            android:dividerHeight="15dip"
            android:fadingEdge="none"
            android:listSelector="@drawable/mlistview_selector"
            android:scrollbars="none"
            android:showDividers="none" />

        <ImageView
            android:id="@+id/iv_complaints_histort_default"
            android:layout_width="113dip"
            android:layout_height="115dip"
            android:layout_centerInParent="true"
            android:src="@drawable/iv_complaints_histort_default" />
    </RelativeLayout>

</LinearLayout>