<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/orange"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:gravity="center"
            android:text="支付成功"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:gravity="center"
            android:text="您的订单已支付成功"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:gravity="center"
            android:text="稍后美容师会和您联系"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:src="@drawable/pay_success" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜您支付成功"
                android:textColor="@color/a333333"
                android:textSize="18sp" 
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="您的订单已支付成功，稍后美容师会与您联系"
                android:visibility="gone" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/layout_ximei_pay_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:gravity="center"
            android:visibility="gone"
            android:padding="25dip">

            <Button
                android:id="@+id/button_ddxq"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dip"
                android:text="订单详情" 
                android:layout_marginRight="25dip"
                android:textColor="@color/aBB996C"
                android:background="@drawable/pay_success_bg"/>

            <Button
                android:id="@+id/button_wsxx"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dip"
                android:text="完善信息" 
                android:visibility="gone"
                android:textColor="@color/aBB996C"
                android:background="@drawable/pay_success_bg"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_card_pay_success"
            android:layout_width="match_parent"
            android:layout_height="50dp" 
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:visibility="gone">

            <Button
                android:id="@+id/button_look_cards"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="查看卡包" 
                android:textColor="@color/aBB996C"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/pay_success_bg"/>

            <Button
                android:id="@+id/button_back_main"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="返回首页" 
                android:textColor="@color/aBB996C"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/pay_success_bg"/>
        </LinearLayout>

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
		    android:gravity="center"
		    android:paddingTop="20dp">

		    <Button
		        android:id="@+id/button_back_old"
		        android:layout_width="wrap_content"
		        android:layout_height="36dp"
		        android:background="@drawable/pay_success_bg"
		        android:paddingLeft="30dp"
		        android:paddingRight="30dp"
		        android:text="继续下单享优惠"
		        android:textColor="@color/aBB996C"
		        android:visibility="gone" />
		</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button_to_myfragment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_button_orange"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_paysuccess_xfje"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginTop="40dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_paysuccess_xfje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="消费金额"
                android:textColor="@color/a333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_paysuccess_xfprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="textview"
                android:textColor="@color/orange"
                android:textSize="24sp" />
        </RelativeLayout>

        <View
            android:id="@+id/vw_paysuccess_xfje"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/af8f8f8"
            android:visibility="gone" />

        <ListView
            android:id="@+id/mlv_paysuccess_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@color/af8f8f8"
            android:dividerHeight="1dip"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>