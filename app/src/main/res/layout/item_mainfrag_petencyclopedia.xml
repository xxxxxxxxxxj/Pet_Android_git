<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/iv_item_mainfragpetencyclopedia"
            android:layout_width="120dip"
            android:layout_height="90dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="10dip"
            android:scaleType="fitXY"
            android:src="@drawable/icon_production_default" />

        <TextView
            android:id="@+id/tv_item_mainfragpetencyclopedia_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_item_mainfragpetencyclopedia"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="#323333"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>