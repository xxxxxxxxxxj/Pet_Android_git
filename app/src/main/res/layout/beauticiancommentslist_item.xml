<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/white"
    android:paddingLeft="10dip"
    >
    
    <View 
        android:id="@+id/view_beauticiancommentslist_item"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/bordergray"
        />
    <ImageView 
	    android:id="@+id/sriv_beauticiancommentslist_item_beautician"
	    android:layout_width="60dip"
	    android:layout_height="60dip"
	    android:scaleType="centerCrop"
	    android:src="@drawable/user_icon_unnet"
	    android:layout_below="@+id/view_beauticiancommentslist_item"
	    android:layout_marginTop="10dip"
	    />
      <TextView 
          android:id="@+id/tv_beauticiancommentslist_item_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=""
          android:textSize="16sp"
          android:textColor="@color/a222222"
          android:singleLine="true"
          android:ellipsize="end"
          android:layout_toRightOf="@+id/sriv_beauticiancommentslist_item_beautician"
          android:layout_alignTop="@+id/sriv_beauticiancommentslist_item_beautician"
          android:layout_marginLeft="10dip"
          />
      <TextView 
          android:id="@+id/tv_beauticiancommentslist_item_content"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=""
          android:textSize="14sp"
          android:textColor="@color/a757575"
          android:layout_below="@+id/tv_beauticiancommentslist_item_name"
          android:layout_alignLeft="@+id/tv_beauticiancommentslist_item_name"
          android:layout_marginTop="4dip"
          android:layout_marginRight="10dip"
          />
      <LinearLayout 
          android:id="@+id/ll_beauticiancommetslist_item_image"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_below="@+id/tv_beauticiancommentslist_item_content"
          android:layout_alignLeft="@+id/tv_beauticiancommentslist_item_name"
          >
          <ImageView 
              android:id="@+id/iv_beauticiancommentslist_item_image1"
              android:layout_width="60dip"
              android:layout_height="60dip"
              android:scaleType="centerCrop"
              android:background="@drawable/icon_production_default"
              android:visibility="gone"
          	  android:layout_marginTop="5dip"
              />
          <ImageView 
              android:id="@+id/iv_beauticiancommentslist_item_image2"
              android:layout_width="60dip"
              android:layout_height="60dip"
              android:scaleType="centerCrop"
          	  android:layout_marginTop="5dip"
              android:background="@drawable/icon_production_default"
              android:layout_marginLeft="6dip"
              android:visibility="gone"
              />
          <ImageView 
              android:id="@+id/iv_beauticiancommentslist_item_image3"
              android:layout_width="60dip"
              android:layout_height="60dip"
          	  android:layout_marginTop="5dip"
              android:scaleType="centerCrop"
              android:background="@drawable/icon_production_default"
              android:layout_marginLeft="6dip"
              android:visibility="gone"
              />
          
      </LinearLayout>
      <TextView 
          android:id="@+id/tv_beauticiancommentslist_item_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=""
          android:textSize="14sp"
          android:textColor="@color/a757575"
          android:layout_below="@+id/ll_beauticiancommetslist_item_image"
          android:layout_alignLeft="@+id/tv_beauticiancommentslist_item_name"
          android:layout_marginTop="5dip"
          android:layout_marginRight="10dip"
          android:paddingBottom="10dip"
          />
      <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_beauticiancommentslist_item_time"
          android:orientation="vertical"
          >
          	<View 
	          android:layout_width="match_parent"
	          android:layout_height="1dp"
	          android:background="@color/bggray"
          	/>
          	<TextView
		    android:id="@+id/TextView_waiter_Reply" 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:text="客服回复：水电费水电费,测试添加现在还没数据"
	  	/>
		<TextView 
		    android:id="@+id/textview_waiter_reply_time"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/TextView_waiter_Reply"
		    android:text="测试时间2016-8-29 19:33:10"/>
      </LinearLayout>
      
	
</RelativeLayout>
