<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_setback"
        android:layout_width="61dp"
        android:layout_height="75dp" >

        <!-- android:background="@drawable/mrscheck_bg_white" -->

        <RelativeLayout
            android:id="@+id/layout_beau_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.haotang.pet.view.CircleImageView
                android:id="@+id/change_img_beau"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_beautician_default" 
                app:border_color="@color/red"
                app:border_width="1dp"/>

            <ImageView
                android:id="@+id/change_img_choose"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/change_img_beau"
                android:layout_alignRight="@+id/change_img_beau"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:visibility="visible" 
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/change_img_beau_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/layout_beau_icon"
            android:gravity="center"
            android:text=" "
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>