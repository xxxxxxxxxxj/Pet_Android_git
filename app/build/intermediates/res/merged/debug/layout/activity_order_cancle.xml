<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#F8F8F8">

    <include layout="@layout/titlebar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="#F8F8F8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_botton"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_cancle_icon"
                android:layout_width="114dp"
                android:layout_height="114dp"
                android:src="@drawable/cat_icon_unnet" />

            <TextView
                android:id="@+id/textView_cancle_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cancle_noticeone"
                android:layout_marginTop="15dp"
                android:text=" " />

            <TextView
                android:id="@+id/textView_cancle_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cancle_noticeone"
                android:layout_marginTop="5dp"
                android:text=" " />

            <TextView
                android:id="@+id/textView_cancle_thr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cancle_noticeone"
                android:layout_marginTop="5dp"
                android:text=" " />
            <TextView
                android:id="@+id/textView_cancle_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/aD1494F"
                android:textSize="@dimen/cancle_noticethr"
                android:layout_marginTop="5dp"
                android:text=" " />

			<!-- <LinearLayout 
			    android:id="@+id/service_give_resaon"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:visibility="gone">
			    
			</LinearLayout> -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_botton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_cancle_tel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:background="@drawable/center_white_cicle_orange"
                android:gravity="center" 
                android:visibility="gone">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="23dp"
                    android:src="@drawable/pet_waiter_service_icon" />

                <Button
                    android:id="@+id/button_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text=" "
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/cancle_noticeone"
                    android:textColor="@color/orange" />
            </LinearLayout>

            <Button
                android:id="@+id/button_un_cancle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:background="@drawable/center_white_cicle_orange"
                android:text="暂不取消"
                android:textSize="@dimen/cancle_noticeone"
                android:textColor="@color/aBB996C" 
                android:visibility="gone"/>

            <Button
                android:id="@+id/button_cancle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_button_service_apponit_ok"
                android:text="确认取消"
                android:padding="8dp"
                android:textSize="@dimen/cancle_noticeone"
                android:textColor="@color/white" 
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/layout_cancle_rule"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginBottom="10dp" >

                <ImageView
                    android:id="@+id/img_rule_show"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/pet_cancle_rule" />

                <Button
                    android:id="@+id/button_rule_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="取消订单规则"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/cancle_noticeone"
                    android:textColor="@color/aBB996C" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>