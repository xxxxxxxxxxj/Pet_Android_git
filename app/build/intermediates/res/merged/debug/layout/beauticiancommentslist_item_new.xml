<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
        >
		<RelativeLayout 
		    android:layout_width="36dp"
		    android:layout_height="36dp"
		    android:layout_marginLeft="10dp">
		    <com.haotang.pet.view.SelectableRoundedImageView
	            android:id="@+id/sriv_beauticiancommentslist_item_beautician"
	            android:layout_width="34dp"
	            android:layout_height="34dp"
	            android:adjustViewBounds="true"
	            android:scaleType="fitXY"
	            android:src="@drawable/user_icon_unnet"
	            custom:sriv_left_bottom_corner_radius="4dp"
	            custom:sriv_left_top_corner_radius="4dp"
	            custom:sriv_right_bottom_corner_radius="4dp"
	            custom:sriv_right_top_corner_radius="4dp" />
		    <ImageView 
		        android:id="@+id/imageview_tag"
		        android:layout_width="10dp"
		        android:layout_height="10dp"
		        android:layout_alignParentRight="true"
		        android:layout_alignParentBottom="true"
		        android:background="@drawable/dz_jl_icon"
		        android:visibility="gone"/>
		</RelativeLayout>
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_beauticiancommentslist_item_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=" "
                android:textColor="@color/a555555"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_beauticiancommentslist_item_time"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=" "
                android:textColor="@color/a757575"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_beauticiancommentslist_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text=" "
        android:textColor="@color/a757575"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_beauticiancommetslist_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_beauticiancommentslist_item_image1"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:background="@drawable/icon_production_default"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_beauticiancommentslist_item_image2"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginLeft="6dip"
            android:background="@drawable/icon_production_default"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_beauticiancommentslist_item_image3"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginLeft="6dip"
            android:background="@drawable/icon_production_default"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_layout_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:layout_marginBottom="-1dp"
            android:layout_marginLeft="10dp"
           
            android:src="@drawable/eva_reply" />
 <!-- android:layout_marginTop="10dp" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/aEEEEEE"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/TextView_waiter_Reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=" "
                android:textColor="@color/a555555"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textview_waiter_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=" "
                android:textColor="@color/a757575"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/aDDDDDD"
        android:paddingTop="10dp"/>
</LinearLayout>