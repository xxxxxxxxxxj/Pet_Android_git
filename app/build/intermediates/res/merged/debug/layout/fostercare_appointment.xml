<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/bggray"
    >
    <include layout="@layout/titlebar"/>
    <com.haotang.pet.pulltorefresh.PullToRefreshScrollView
        android:id="@+id/prs_fostercareappointment_main"
        android:layout_width="match_parent"
         android:layout_height="match_parent" 
         >
         <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             >
        <ImageView 
            android:id="@+id/iv_fostercareappointment_fostercareimg"
            android:layout_width="match_parent"
            android:layout_height="180dip"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_fostercare"
            />
             
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="-40dip"
        android:layout_below="@+id/iv_fostercareappointment_fostercareimg"
        android:background="@drawable/bg_fostercare_appointment"
        >
        <RelativeLayout 
            android:id="@+id/rl_fostercareappointment_changepet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingTop="15dip"
            android:paddingBottom="15dip"
            >
            <TextView 
                android:id="@+id/tv_fostercareappointment_petname_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宠物类型"
                android:textSize="18sp"
                android:textColor="@color/a222222"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/tv_fostercareappointment_petname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:hint="请选择您的宠物"
                android:textColorHint="@color/acccccc"
                android:textColor="@color/a888888"
                android:gravity="right"
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_fostercareappointment_petname"
                android:layout_toRightOf="@+id/tv_fostercareappointment_petname_pre"
                />
            <ImageView
                android:id="@+id/iv_fostercareappointment_petname"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_rightarrow" />
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.8dip"
            android:background="@color/bordergray"
            android:layout_marginLeft="10dip"
        	android:layout_marginRight="10dip"
            />
        <RelativeLayout 
            android:id="@+id/rl_fostercareappointment_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingTop="15dip"
            android:paddingBottom="15dip"
            >
            <TextView 
                android:id="@+id/tv_fostercareappointment_addr_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宠物地址"
                android:textSize="18sp"
                android:textColor="@color/a222222"
                android:layout_centerVertical="true"
                />
            <TextView 
                android:id="@+id/tv_fostercareappointment_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/a888888"
                android:gravity="right"
                android:hint="请填写您的宠物地址"
                android:textColorHint="@color/acccccc"
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/iv_fostercareappointment_addr"
                android:layout_toRightOf="@+id/tv_fostercareappointment_addr_pre"
                />
            <ImageView
                android:id="@+id/iv_fostercareappointment_addr"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_rightarrow" />
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.8dip"
            android:background="@color/bordergray"
            android:layout_marginLeft="10dip"
        	android:layout_marginRight="10dip"
            />
        <RelativeLayout 
            android:id="@+id/rl_fostercareappointment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingTop="15dip"
            android:paddingBottom="15dip"
            >
            <TextView 
                android:id="@+id/tv_fostercareappointment_time_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约时间"
                android:textSize="18sp"
                android:textColor="@color/a222222"
                android:layout_centerVertical="true"
                />
            
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_fostercareappointment_time"
                >
                <TextView 
	                android:id="@+id/tv_fostercareappointment_timestart"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text=""
	                android:textSize="18sp"
	                android:textColor="@color/a222222"
	                android:singleLine="true"
        			android:ellipsize="end"
	                />
                <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="入住"
	                android:textSize="16sp"
	                android:singleLine="true"
        			android:ellipsize="end"
	                android:textColor="@color/a888888"
	                android:layout_toRightOf="@+id/tv_fostercareappointment_timestart"
	                android:layout_alignBottom="@+id/tv_fostercareappointment_timestart"
	                />
                <TextView 
	                android:id="@+id/tv_fostercareappointment_timeend"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text=""
	                android:textSize="18sp"
	                android:textColor="@color/a222222"
	                android:singleLine="true"
        			android:ellipsize="end"
	                android:layout_below="@+id/tv_fostercareappointment_timestart"
	                android:layout_marginTop="5dip"
	                />
                <TextView 
                    android:id="@+id/tv_fostercareappointment_timedays"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text=""
	                android:textSize="16sp"
	                android:singleLine="true"
        			android:ellipsize="end"
	                android:textColor="@color/a888888"
	                android:layout_toRightOf="@+id/tv_fostercareappointment_timeend"
	                android:layout_alignBottom="@+id/tv_fostercareappointment_timeend"
	                />
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_fostercareappointment_time"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_rightarrow" />
        </RelativeLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="0.8dip"
            android:background="@color/bordergray"
            android:layout_marginLeft="10dip"
        	android:layout_marginRight="10dip"
            />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="10dip"
            android:gravity="center"
            >
            <CheckBox 
                android:id="@+id/cb_fostercareappointment_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意"
                android:paddingLeft="10dip"
                android:textSize="16sp"
                android:textColor="@color/a888888"
                style="@style/CustomCheckboxTheme"
                android:layout_centerVertical="true"
                android:checked="true"
                />
            <TextView 
                android:id="@+id/tv_fostercareappointment_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《宠物家寄养协议》"
                android:textSize="16sp"
                android:textColor="@color/orange"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/cb_fostercareappointment_agree"
                />
            
            
        </RelativeLayout>
        
        <Button 
            android:id="@+id/bt_fostercareappointment_submit"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:text="预  约"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_orange"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            />
        
    </LinearLayout>
             
         </RelativeLayout>
    </com.haotang.pet.pulltorefresh.PullToRefreshScrollView>
    <RelativeLayout 
        android:id="@+id/rl_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <include layout="@layout/nullhint"/>
    </RelativeLayout>

</LinearLayout>
