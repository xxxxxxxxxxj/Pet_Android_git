<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bggray"
    android:orientation="vertical" >
    <include layout="@layout/titlebar"/>
    
    <EditText 
        android:id="@+id/et_note_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="8"
        android:textSize="16sp"
        android:textColor="@color/a666666"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/bg_note_round"
        android:paddingLeft="4dip"
        android:paddingTop="3dip"
        android:paddingRight="4dip"
        android:paddingBottom="3dip"
        android:maxLength="100"
        android:gravity="top"
        />
    
    <Button 
        android:id="@+id/bt_note_submite"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/bg_button_orange"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        >
        <LinearLayout 
            android:id="@+id/ll_note_note1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginRight="5dip"
            android:background="@drawable/bg_note_biground"
            android:padding="5dip"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            >
            <ImageView 
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:scaleType="fitXY"
                android:background="@drawable/icon_note_add"
                />
            <TextView 
                android:id="@+id/tv_note_note1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="经常去宠物店"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/a666666"
                android:layout_marginLeft="5dip"
                />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/ll_note_note2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginLeft="5dip"
            android:background="@drawable/bg_note_biground"
            android:padding="5dip"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            >
            <ImageView 
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:scaleType="fitXY"
                android:background="@drawable/icon_note_add"
                />
            <TextView 
                android:id="@+id/tv_note_note2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有点小淘气"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@color/a666666"
                android:layout_marginLeft="5dip"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        >
        <LinearLayout 
            android:id="@+id/ll_note_note3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginRight="5dip"
            android:background="@drawable/bg_note_biground"
            android:padding="5dip"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            >
            <ImageView 
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:scaleType="fitXY"
                android:background="@drawable/icon_note_add"
                />
            <TextView 
                android:id="@+id/tv_note_note3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="毛毛有结 "
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="@color/a666666"
                android:layout_marginLeft="5dip"
                />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/ll_note_note4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginLeft="5dip"
            android:background="@drawable/bg_note_biground"
            android:padding="5dip"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            >
            <ImageView 
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:scaleType="fitXY"
                android:background="@drawable/icon_note_add"
                />
            <TextView 
                android:id="@+id/tv_note_note4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近肠胃不太好"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@color/a666666"
                android:layout_marginLeft="5dip"
                />
        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>
