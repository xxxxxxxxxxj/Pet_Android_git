<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/white"
    android:orientation="vertical"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="59dip"
        >
        
      <TextView 
	        android:id="@+id/tv_cityitem_city"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="北京"
		    android:textSize="20sp"
		    android:textColor="@color/a777777"
		    android:layout_marginLeft="20dip"
		    android:gravity="center"
		    android:layout_centerVertical="true"
		    />
      <ImageView 
          android:id="@+id/iv_cityitem_selected"
          android:layout_width="30dip"
          android:layout_height="30dip"
          android:scaleType="fitXY"
          android:background="@drawable/icon_city_selected"
          android:layout_alignParentRight="true"
          android:layout_marginRight="10dip"
          android:layout_centerVertical="true"
          />
    </RelativeLayout>
	<View 
	    android:id="@+id/view_cityitem_line"
	    android:layout_width="match_parent"
	    android:layout_height="1dip"
	    android:background="@color/bordergray"
	    android:layout_marginLeft="20dip"
	    />
</LinearLayout>
