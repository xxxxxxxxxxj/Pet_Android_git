<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
    <View 
        android:id="@+id/view_petdateselecter_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        />
    <RelativeLayout 
        android:id="@+id/rl_petdateselecter_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >
        <TextView 
            android:id="@+id/tv_petdateselecter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择宠物生日"
            android:textSize="19sp"
            android:textColor="@color/a222222"
            android:layout_centerHorizontal="true"
            />
        <ImageButton 
            android:id="@+id/ib_petdateselecter_close"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:scaleType="fitXY"
            android:background="@drawable/icon_close"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dip"
            android:layout_alignTop="@+id/tv_petdateselecter_title"
            />
        <LinearLayout 
            android:id="@+id/ll_petdateselecter_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_petdateselecter_title"
            android:layout_marginTop="20dip"
            >
            <com.haotang.pet.view.WheelPicker.WheelView 
		        android:id="@+id/wv_year"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="-2dip"
                />
            <com.haotang.pet.view.WheelPicker.WheelView 
		        android:id="@+id/wv_month"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="-2dip"
                />
            <com.haotang.pet.view.WheelPicker.WheelView 
		        android:id="@+id/wv_day"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="-2dip"
                />
        </LinearLayout>
        <Button 
            android:id="@+id/bt_petdateselecter_ok"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:text="确定"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_orange"
            android:layout_below="@+id/ll_petdateselecter_date"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            />
    </RelativeLayout>

</RelativeLayout>
