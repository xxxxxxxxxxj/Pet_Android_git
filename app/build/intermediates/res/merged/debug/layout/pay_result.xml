<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
     >
     
     <LinearLayout 
         android:id="@+id/ll_result_top"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:background="@color/orange"
         android:layout_weight="3"
         >
         <TextView 
             android:id="@+id/tv_payresult_success"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="支付失败"
             android:textSize="22sp"
             android:textColor="@color/white"
             android:gravity="center"
             android:layout_marginTop="40dip"
             />
         <TextView 
             android:id="@+id/tv_payresult_msg"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="对不起，您的订单支付失败"
             android:textSize="16sp"
             android:textColor="@color/white"
             android:gravity="center"
             android:layout_marginTop="15dip"
             />
         <TextView 
             android:id="@+id/tv_payresult_msg_1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="稍后美容师会和您联系"
             android:textSize="16sp"
             android:textColor="@color/white"
             android:gravity="center"
             android:layout_marginTop="8dip"
             android:visibility="gone"
             />
     </LinearLayout>
     <LinearLayout 
         android:id="@+id/ll_result_bottom"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_weight="2"
         android:background="@color/bggray"
         ></LinearLayout>
    

</LinearLayout>
