<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     >
     <include android:id="@+id/ll_title" layout="@layout/titlebar"/>
     <LinearLayout 
         android:id="@+id/ll_fostercaredate_week"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:paddingTop="5dip"
         android:paddingBottom="5dip"
         android:background="@color/bggray"
         android:layout_below="@+id/ll_title"
         >
         <TextView 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="日"
             android:textSize="14sp"
             android:textColor="@color/red"
             android:gravity="center"
             android:layout_weight="1"
             />
         <TextView 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="一"
             android:textSize="14sp"
             android:textColor="@color/a757575"
             android:gravity="center"
             android:layout_weight="1"
             />
         <TextView 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="二"
             android:textSize="14sp"
             android:textColor="@color/a757575"
             android:gravity="center"
             android:layout_weight="1"
             />
         <TextView 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="三"
             android:textSize="14sp"
             android:textColor="@color/a757575"
             android:gravity="center"
             android:layout_weight="1"
             />
         <TextView 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="四"
             android:textSize="14sp"
             android:textColor="@color/a757575"
             android:gravity="center"
             android:layout_weight="1"
             />
         <TextView 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="五"
             android:textSize="14sp"
             android:textColor="@color/a757575"
             android:gravity="center"
             android:layout_weight="1"
             />
         <TextView 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="六"
             android:textSize="14sp"
             android:textColor="@color/red"
             android:gravity="center"
             android:layout_weight="1"
             />
     </LinearLayout>
     
     <com.haotang.pet.view.PinnedHeaderListView
         android:id="@+id/plv_fostercare_date"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@android:color/white"
         android:layout_below="@+id/ll_fostercaredate_week"
         android:divider="@null"
         />
     
     
     <TextView 
         android:id="@+id/tv_fostercaredate_hint"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="请选择入住日期"
         android:textSize="20sp"
         android:textColor="@color/white"
         android:background="@drawable/bg_darkgray_round"
         android:layout_centerHorizontal="true"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="20dip"
         android:paddingLeft="20dip"
         android:paddingRight="20dip"
         android:paddingTop="10dip"
         android:paddingBottom="10dip"
         />
    

</RelativeLayout>
