<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_service_all_train"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:padding="10dp">

        <com.haotang.pet.view.SelectableRoundedImageView
            android:id="@+id/imageView_service_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/user_icon_unnet"
            custom:sriv_left_bottom_corner_radius="5dip"
            custom:sriv_left_top_corner_radius="5dip"
            custom:sriv_right_bottom_corner_radius="5dip"
            custom:sriv_right_top_corner_radius="5dip"
            />

        <TextView
            android:id="@+id/textView_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView_service_icon"
            android:layout_toLeftOf="@+id/layout_show_low_servie_price"
            android:paddingLeft="5dp"
            android:text="测试礼服训练套餐" />

        <ImageView
            android:id="@+id/imageView_service_right"
            android:layout_width="17.5dp"
            android:layout_height="10.5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/iv_fostercarechooseroom_fz_up" />
		<LinearLayout 
		    android:id="@+id/layout_show_low_servie_price"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_toLeftOf="@+id/imageView_service_right"
		    android:gravity="bottom"
		    android:paddingRight="5dp">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="12sp"
		        android:textColor="@color/orange"
		        android:text="¥"/>
		    <TextView 
		        android:id="@+id/textview_layout_service_low_price"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		        android:textColor="@color/orange"
		        android:text="测试2048"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="12sp"
		        android:textColor="@color/orange"
		        android:text="起"/>
		</LinearLayout>
    </RelativeLayout>
	<com.haotang.pet.view.MListview
        android:id="@+id/train_pets_service_choose_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:visibility="gone"
        />
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bggray"/>
</LinearLayout>
