<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/view_fostercareroomdetail_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000" />

    <RelativeLayout
        android:id="@+id/rl_fostercareroomdetail_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip" >

        <com.haotang.pet.view.SelectableRoundedImageView
            android:id="@+id/sriv_fostercare_roomdetail_img"
            android:layout_width="270dp"
            android:layout_height="360dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_production_default"
            custom:sriv_left_bottom_corner_radius="5dip"
            custom:sriv_left_top_corner_radius="5dip"
            android:visibility="gone"
            custom:sriv_right_bottom_corner_radius="5dip"
            custom:sriv_right_top_corner_radius="5dip" />

        <RelativeLayout
            android:id="@+id/rl_fostercareroomdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:background="@drawable/bg_white_round"
            android:paddingBottom="20dip"
            android:paddingLeft="30dip"
            android:paddingRight="30dip"
            android:paddingTop="20dip" >

            <TextView
                android:id="@+id/tv_fostercareroomdetail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="温馨公寓"
                android:textColor="@color/a222222"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_fostercareroomdetail_img"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:layout_below="@+id/tv_fostercareroomdetail_name"
                android:layout_marginTop="10dip"
                android:background="@drawable/bg_room_default"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_fostercareroomdetail_roomsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_fostercareroomdetail_img"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:text="房间大小:"
                android:textColor="@color/a888888"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_fostercareroomdetail_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_fostercareroomdetail_roomsize"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:text="适合宠物:"
                android:textColor="@color/a888888"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bt_fostercareroomdetail_submit"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_below="@+id/tv_fostercareroomdetail_des"
                android:layout_marginTop="20dip"
                android:background="@drawable/bg_button_orange"
                android:text="预  约"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/ib_fostercareroomdetail_close"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_below="@id/rl_fostercareroomdetail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:background="@drawable/icon_close_gary"
            android:scaleType="fitXY" />
    </RelativeLayout>

</RelativeLayout>