<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/rl_selecttime_dialog_main"
    android:background="#99000000"
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <RelativeLayout 
            android:id="@+id/rl_selecttime_dialog_name"
            android:layout_width="match_parent"
            android:layout_height="56dip"
            android:background="#f8f8f8"
            >
        <TextView 
            android:id="@+id/tv_selecttime_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可约时间"
            android:textSize="16sp"
            android:textColor="@color/a666666"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <Button 
            android:id="@+id/iv_selecttime_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="@null"
            android:text="关闭"
            android:textSize="14sp"
            android:textColor="@color/a666666"
            android:paddingLeft="5dip"
            android:paddingRight="15dip"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.8dip"
                android:background="@color/bordergray"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/rl_selecttime_day"
            android:layout_width="match_parent"
            android:layout_height="75dip"
            android:layout_marginTop="10dip"
            android:layout_below="@+id/rl_selecttime_dialog_name"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            >
            <ImageView 
                android:id="@+id/iv_selecttime_dialog_arrowleft"
                android:layout_width="30dip"
                android:layout_height="match_parent"
                android:background="@drawable/icon_selecttime_arrowleft_orange"
                />
            <ImageView 
                android:id="@+id/iv_selecttime_dialog_arrowright"
                android:layout_width="30dip"
                android:layout_height="match_parent"
                android:background="@drawable/icon_selecttime_arrowright_orange"
                android:layout_alignParentRight="true"
                />
            <HorizontalScrollView
	            android:id="@+id/hsv_selecttime_dialog_scrollview"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:fadingEdge="@null"
				android:scrollbars="none"
	            android:layout_toLeftOf="@+id/iv_selecttime_dialog_arrowright"
		        android:layout_toRightOf="@+id/iv_selecttime_dialog_arrowleft"
		        android:layout_marginTop="5dip"
            	android:layout_marginBottom="5dip"
	          >
	          <LinearLayout 
		        android:id="@+id/ll_selecttime_dialog_content"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="horizontal"
		        android:gravity="center_vertical"
		        android:layout_gravity="center_vertical"
		        ></LinearLayout>
	          </HorizontalScrollView>
            
        </RelativeLayout>
    <GridView 
        android:id="@+id/gv_selecttime_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="5"
	    android:verticalSpacing="5dip"
	    android:horizontalSpacing="5dip"
	    android:padding="10dip"
	    android:listSelector="@android:color/transparent"
	    android:scrollbars="none"
	    android:layout_below="@+id/rl_selecttime_day"
        />
    </RelativeLayout>

</RelativeLayout>
