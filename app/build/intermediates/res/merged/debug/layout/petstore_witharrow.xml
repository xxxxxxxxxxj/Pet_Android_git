<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
     >
    <RelativeLayout 
        android:id="@+id/service_show_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:gravity="center_vertical"
        >
        <com.haotang.pet.view.SelectableRoundedImageView 
            android:id="@+id/sriv_petstore_image"
            android:layout_width="60dip"
	        android:layout_height="60dip"
	        android:scaleType="fitXY"
	        android:src="@drawable/icon_production_default"
	        custom:sriv_left_top_corner_radius="5dip"
	        custom:sriv_right_top_corner_radius="5dip"
	        custom:sriv_left_bottom_corner_radius="5dip"
	        custom:sriv_right_bottom_corner_radius="5dip"
	        android:layout_centerVertical="true"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/sriv_petstore_image"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dip"
            >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView 
                android:id="@+id/petstore_show_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_red_round"
                android:textColor="@color/white"
                android:visibility="gone"
                android:paddingLeft="3dip"
                android:paddingRight="3dip"
                android:textSize="11sp"
                android:text="到店"/>
            <TextView 
                android:id="@+id/tv_petstore_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/a333333"
                android:textSize="16sp"
                android:layout_marginLeft="5dip"
                android:singleLine="true"
                android:ellipsize="end"
                />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址："
                android:textColor="#949494"
                android:textSize="14sp"
                />
            <TextView 
                android:id="@+id/tv_petstore_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#949494"
                android:textSize="14sp"
                />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="电话："
	                android:textColor="#949494"
	                android:textSize="14sp"
	                />
                <TextView 
                    android:id="@+id/tv_petstore_phone"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text=""
	                android:textColor="#949494"
	                android:textSize="14sp"
	                android:singleLine="true"
                	android:ellipsize="end"
	                />
            </LinearLayout>
            
        </LinearLayout>
        <ImageView 
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/icon_rightarrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</LinearLayout>
