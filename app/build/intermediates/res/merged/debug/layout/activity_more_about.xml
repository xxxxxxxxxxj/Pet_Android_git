<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@color/bggray">
	<include layout="@layout/titlebar"/>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    android:background="@color/white">

		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="60dp"
		    android:gravity="center_vertical" >

			<ImageView
			    android:id="@+id/imageView_noty_img"
			    android:layout_width="60dp"
			    android:layout_height="40dp"
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
			    android:layout_marginRight="10dip"
			    android:background="@drawable/noty_yes" />

			<TextView
			    android:id="@+id/textView_more_accept_notification"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:text="允许接收通知"
			    android:layout_marginLeft="10dp"
			    android:padding="5dp"
			    android:textColor="#9B9792"
			    android:textSize="17sp" />

		</RelativeLayout>
		<View android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_marginLeft="10dp"
		    android:background="@color/bordergray"/>

		<RelativeLayout
		    android:id="@+id/layout_update_check"
		    android:layout_width="match_parent"
		    android:layout_height="60dp" >

			<TextView
			    android:id="@+id/textView_more_update"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_centerVertical="true"
			    android:text="检查更新版本"
			    android:layout_marginLeft="10dp"
			    android:padding="5dp"
			    android:textColor="#9B9792"
			    android:textSize="17sp" />

		</RelativeLayout>
		<View android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_marginLeft="10dp"
		    android:background="@color/bordergray"/>

		<RelativeLayout
		     android:id="@+id/layout_about"
		    android:layout_width="match_parent"
		    android:layout_height="60dp" >

		    <TextView
		        android:id="@+id/textView_more_about_other"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="10dp"
		        android:text="关于"
		        android:padding="5dp"
		        android:textColor="#9B9792"
		        android:textSize="17sp" />

		    <ImageView
		        android:id="@+id/imageView_more_jiantou"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="5dip"
		        android:layout_alignTop="@+id/textView_more_about_other"
		        android:background="@drawable/change_account_show" />

		</RelativeLayout>

		<View android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_marginLeft="10dp"
		    android:visibility="gone"
		    android:background="@color/bordergray"/>
		<!-- android:layout_marginBottom="5dp" -->
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:gravity="center" >

		<LinearLayout
		    android:id="@+id/layout_login_out"
		    android:layout_width="match_parent"
		    android:layout_height="50dp"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
		    android:gravity="center" 
		    android:background="@drawable/bg_button_orange">

			<TextView
			    android:id="@+id/button_login_out"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textColor="@color/white"
			    android:textSize="17sp"
			    android:text="退出登录" />

		</LinearLayout>

	</LinearLayout>

</LinearLayout>