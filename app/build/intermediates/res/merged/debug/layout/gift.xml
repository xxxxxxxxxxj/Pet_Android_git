<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
     <View 
         android:id="@+id/view_gift_back"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#99000000"
         />
    <RelativeLayout 
        android:id="@+id/rl_gift_main"
        android:layout_width="293dip"
        android:layout_height="430dip"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_gift"
        >
        <ImageButton 
            android:id="@+id/ib_gift_close"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:scaleType="fitXY"
            android:background="@drawable/icon_gift_close"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dip"
            android:layout_marginRight="10dip"
            />
        <View 
            android:id="@+id/view_gift_1"
            android:layout_width="0.8dip"
            android:layout_height="30dip"
            android:background="#A43131"
            android:layout_below="@+id/ib_gift_close"
            android:layout_marginRight="25dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-3dip"
            />
        <ImageView 
            android:id="@+id/iv_gift_title"
            android:layout_width="197dip"
            android:layout_height="80dip"
            android:scaleType="fitXY"
            android:background="@drawable/icon_gift_title_1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/view_gift_1"
            />
        <RelativeLayout 
            android:id="@+id/rl_gift_level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_gift_title"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            >
            <ImageView 
            android:id="@+id/iv_gift_level1_hint"
            android:layout_width="197dip"
            android:layout_height="56dip"
            android:scaleType="fitXY"
            android:background="@drawable/icon_gift_level_1_hint"
            android:layout_centerHorizontal="true"
            />
            <EditText 
                android:id="@+id/et_gift_level1_phone"
                android:layout_width="230dip"
                android:layout_height="45dip"
                android:textColor="@color/a777777"
                android:textSize="20sp"
                android:background="@drawable/bg_gift_phone_hint"
                android:layout_below="@+id/iv_gift_level1_hint"
                android:layout_marginTop="25dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:layout_centerHorizontal="true"
                android:inputType="number"
                />
            <ImageButton 
                android:id="@+id/ib_gift_receive"
                android:layout_width="180dip"
                android:layout_height="45dip"
                android:background="@drawable/bg_button_gift_receive"
                android:layout_below="@+id/et_gift_level1_phone"
                android:layout_marginTop="15dip"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/rl_gift_level2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_gift_title"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:visibility="gone"
            >
            <LinearLayout 
                android:id="@+id/ll_gift_level2_txt"
                android:layout_width="240dip"
                android:layout_height="wrap_content"
                android:paddingTop="20dip"
                android:paddingBottom="20dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:orientation="vertical"
                android:background="@drawable/bg_darkred_round"
                android:layout_centerHorizontal="true"
                >
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    >
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您的"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠券"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    >
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已存放至账户"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        />
                    <TextView 
                        android:id="@+id/tv_gift_level2_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快给你的宝贝选个美容师吧"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        />
            </LinearLayout>
            <ImageButton 
                android:id="@+id/ib_gift_receive_ok"
                android:layout_width="180dip"
                android:layout_height="45dip"
                android:background="@drawable/bg_button_gift_receive_ok"
                android:layout_below="@+id/ll_gift_level2_txt"
                android:layout_marginTop="15dip"
                android:layout_centerHorizontal="true"
                />
            
            </RelativeLayout>
            
        <RelativeLayout 
            android:id="@+id/rl_gift_level3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_gift_title"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dip"
            android:visibility="gone"
            >
            <LinearLayout 
                android:id="@+id/ll_gift_level3_txt"
                android:layout_width="220dip"
                android:layout_height="wrap_content"
                android:paddingTop="20dip"
                android:paddingBottom="20dip"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:orientation="vertical"
                android:background="@drawable/bg_darkred_round"
                android:layout_centerHorizontal="true"
                >
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    >
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您的"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
                
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已经领取过红包啦"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="换个号码试试吧"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        />
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="240dip"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dip"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ll_gift_level3_txt"
                >
               <ImageButton 
                android:id="@+id/ib_gift_receive_change"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_weight="1"
                android:layout_marginRight="10dip"
                android:background="@drawable/bg_button_gift_change"
                />     
               <ImageButton 
                android:id="@+id/ib_gift_receive_giveup"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_weight="1"
                android:layout_marginLeft="10dip"
                android:background="@drawable/bg_button_gift_giveup"
                />     
                </LinearLayout>
            
            </RelativeLayout>
        
    </RelativeLayout>

</RelativeLayout>
