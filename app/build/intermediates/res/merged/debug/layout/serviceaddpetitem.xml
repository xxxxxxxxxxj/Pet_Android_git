<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
    <ImageView 
        android:id="@+id/iv_serviceaddpetitem"
        android:layout_width="16dip"
        android:layout_height="16dip"
        android:scaleType="fitXY"
        android:background="@drawable/icon_pay_normal"
        android:layout_centerVertical="true"
        />
    <TextView 
        android:id="@+id/tv_serviceaddpetitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单项名称"
        android:textSize="15sp"
        android:textColor="@color/a666666"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/iv_serviceaddpetitem"
        android:paddingTop="2dip"
        android:paddingBottom="2dip"
        />
    <TextView 
        android:id="@+id/tv_serviceaddpetitem_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥20.0"
        android:textSize="16sp"
        android:textColor="@color/a666666"
        android:gravity="center_vertical"
        android:layout_marginLeft="3dip"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_serviceaddpetitem_name"
        />

</RelativeLayout>
