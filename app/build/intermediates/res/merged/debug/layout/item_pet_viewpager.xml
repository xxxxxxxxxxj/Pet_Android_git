<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/height_fancycoverflow"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center" >

    <ImageView
        android:id="@+id/iv_item_viewpager_flag"
        android:layout_width="8dip"
        android:layout_height="8dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:src="@drawable/bg_red_circle" />

    <ImageView
        android:id="@+id/iv_item_viewpager_member"
        android:layout_width="22dip"
        android:layout_height="22dip"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/cus_petinfo_memeber"
        android:visibility="gone" />

    <com.haotang.pet.view.SelectableRoundedImageView
        android:id="@+id/sriv_item_viewpager"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="2dip"
        android:scaleType="fitXY"
        android:src="@drawable/user_icon_unnet"
        custom:sriv_left_bottom_corner_radius="5dip"
        custom:sriv_left_top_corner_radius="5dip"
        custom:sriv_right_bottom_corner_radius="5dip"
        custom:sriv_right_top_corner_radius="5dip" />

    <TextView
        android:id="@+id/tv_item_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sriv_item_viewpager"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>