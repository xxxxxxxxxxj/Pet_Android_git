<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="10dip"
    >
    <ImageView 
	    android:id="@+id/sriv_mainhothospitalitem_img"
	    android:layout_width="80dip"
	    android:layout_height="80dip"
	    android:scaleType="centerCrop"
	    android:src="@drawable/user_icon_unnet"
	    android:layout_below="@+id/view_beauticiancommentslist_item"
	    android:layout_centerVertical="true"
	    />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/sriv_mainhothospitalitem_img"
        android:layout_marginLeft="8dip"
        android:layout_centerVertical="true"
        >
        <TextView 
            android:id="@+id/tv_mainhothospitalitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医院名称"
            android:textSize="18sp"
            android:textColor="@color/a333333"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView 
            android:id="@+id/tv_mainhothospitalitem_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医院地址"
            android:textSize="16sp"
            android:textColor="@color/a999999"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="5dip"
            />
    </LinearLayout>
	
</RelativeLayout>
