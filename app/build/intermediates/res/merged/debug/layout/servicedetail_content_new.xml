<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/textView_service_name_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="1dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/ll_servicedetail_changepet"
            android:text=" "
            android:textColor="@color/a333333"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_servicedetail_changepet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dip"
            android:gravity="top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_servicedetail_changepet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:autoLink="all"
                android:text="切换宠物"
                android:textColor="@color/aBB996C"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="22dip"
                android:layout_height="30dip"
                android:background="@drawable/icon_rightarrow"
                android:scaleType="fitXY"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_top_next_eva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:visibility="visible" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附近" />

        <TextView
            android:id="@+id/textView_service_detail_num_to_be_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/orange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="只宠物做过" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textview_good_show"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text=" " />

            <TextView
                android:id="@+id/textview_good"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text=" " />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bggray" />

    <TextView
        android:id="@+id/textview_give_other_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aF8E8E8"
        android:padding="10dp"
        android:text=" "
        android:textColor="@color/aC74C51" />

    <LinearLayout
        android:id="@+id/la_layout_isshow_go_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center|left"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/textview_showwhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" " />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/bggray" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/re_layout_go_shop"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="#F8F4EB"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <!--
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        -->

        <com.haotang.pet.view.SelectableRoundedImageView
            android:id="@+id/imageview_go_shop_icon"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_service_goshop"
            android:visibility="visible"
            custom:sriv_left_bottom_corner_radius="5dip"
            custom:sriv_left_top_corner_radius="5dip"
            custom:sriv_right_bottom_corner_radius="5dip"
            custom:sriv_right_top_corner_radius="5dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageview_go_shop_icon"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textview_go_shop_name_and_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text=" "
                            android:textColor="@color/a333333"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/layout_hot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/textview_go_shop_name_and_price"
                            android:layout_toRightOf="@+id/textview_go_shop_name_and_price"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="23dp"
                                android:layout_height="9.5dp"
                                android:layout_marginTop="4.75dp"
                                android:src="@drawable/hot" />
                        </LinearLayout>
                    </RelativeLayout>

                    <!--
                    <LinearLayout 
                        android:id="@+id/layout_hot"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="top">
                        <ImageView 
                            android:layout_width="23dp"
                            android:layout_height="9.5dp"
                            android:src="@drawable/hot"/>
                    </LinearLayout>
                    -->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/service_go_shop_show_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=" "
                        android:textColor="#949494"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- 这里是红包 -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center|right"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/about_other" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.3"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/relayout_service_item_go_shop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3.5dp"
                    android:background="#F8F4EB"
                    android:gravity="bottom|right"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/textview_service_price_mark_go_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textview_service_text_price_from_go_shop"
                        android:layout_alignParentBottom="true"
                        android:text="¥"
                        android:textColor="@color/aE2364A"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textview_service_text_price_from_go_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="1dp"
                        android:layout_toRightOf="@+id/textview_service_price_mark_go_shop"
                        android:text="0"
                        android:textColor="@color/aE2364A"
                        android:textSize="@dimen/service_price_size" />

                    <TextView
                        android:id="@+id/textview_service_text_price_from_detail_go_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textview_service_text_price_from_go_shop"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="1dp"
                        android:layout_toRightOf="@+id/textview_service_text_price_from_go_shop"
                        android:text="起"
                        android:textColor="@color/a757575"
                        android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/imageview_service_arrow_go_shop"
                        android:layout_width="@dimen/service_right_icon_up_and_down_width"
                        android:layout_height="@dimen/service_right_icon_up_and_down_height"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="@dimen/service_right_icon_margin_right"
                        android:layout_toRightOf="@+id/textview_service_text_price_from_detail_go_shop"
                        android:background="@drawable/service_icon_arrow_up" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relayout_service_from_beau_shop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F8F4EB"
                    android:gravity="center|right"
                    android:visibility="gone" >

                    <!-- 这是到店约 新版增加价格的 -->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:gravity="center|right"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/button_go_apponit_shop"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/button_go_apponit_shop"
                                android:gravity="top|right" >

                                <TextView
                                    android:id="@+id/textview_service_from_beau_shop"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@+id/textview_item_service_price_one"
                                    android:layout_centerVertical="true"
                                    android:text="¥"
                                    android:textColor="@color/aE2364A"
                                    android:textSize="10sp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/textview_service_text_price_beau_shop"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/textview_item_service_up_one"
                                    android:includeFontPadding="false"
                                    android:text="0"
                                    android:textColor="@color/aE2364A"
                                    android:textSize="@dimen/service_price_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/button_go_apponit_shop"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/button_go_apponit_shop"
                                android:gravity="bottom"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/old_shoplist"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="原价"
                                    android:textColor="@color/a666666"
                                    android:textSize="@dimen/service_old_price" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/no_oldshop_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/button_go_apponit_shop"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/service_price_size"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/button_go_apponit_shop"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/service_button_height"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_button_service_apponit_ok"
                                android:gravity="center"
                                android:paddingBottom="3dp"
                                android:paddingLeft="9dp"
                                android:paddingRight="9dp"
                                android:paddingTop="3dp"
                                android:text="预约"
                                android:textColor="@color/white"
                                android:textSize="@dimen/item_service_appoinment_yue" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/service_item_show_go_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone" >

        <include
            android:id="@+id/goshop"
            layout="@layout/item_service_show" />
    </LinearLayout>

    <View
        android:id="@+id/view_home_and_shop"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/re_layout_go_home"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="#EFF4F7"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <com.haotang.pet.view.SelectableRoundedImageView
            android:id="@+id/imageview_go_home_icon"
            android:layout_width="55dip"
            android:layout_height="55dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_service_gohome"
            android:visibility="visible"
            custom:sriv_left_bottom_corner_radius="5dip"
            custom:sriv_left_top_corner_radius="5dip"
            custom:sriv_right_bottom_corner_radius="5dip"
            custom:sriv_right_top_corner_radius="5dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageview_go_home_icon"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" 
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textview_go_home_name_and_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=" "
                        android:textColor="@color/a333333"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/textview_go_home_service_price_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/aD1494F"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/service_go_home_show_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text=" "
                        android:textColor="#949494"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
            <!-- 这里是红包 -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center|right"
                android:visibility="gone" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/about_other" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.3"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <!-- 这里线性布局改成垂直 android:orientation="horizontal" -->

                <RelativeLayout
                    android:id="@+id/relayout_service_item_go_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EFF4F7"
                    android:gravity="bottom|right"
                    android:layout_marginBottom="3.5dp"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/textview_service_price_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textview_service_text_price_from"
                        android:layout_alignParentBottom="true"
                        android:text="¥"
                        android:textColor="@color/aE2364A"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/textview_service_text_price_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="1dp"
                        android:layout_toRightOf="@+id/textview_service_price_mark"
                        android:text="0"
                        android:textColor="@color/aE2364A"
                        android:textSize="@dimen/service_price_size" />

                    <TextView
                        android:id="@+id/textview_service_text_price_from_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textview_service_text_price_from"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="1dp"
                        android:layout_toRightOf="@+id/textview_service_text_price_from"
                        android:text="起"
                        android:textColor="@color/a757575"
                        android:textSize="10sp" />

                    <ImageView
                        android:id="@+id/imageview_service_arrow_go_home"
                        android:layout_width="@dimen/service_right_icon_up_and_down_width"
                        android:layout_height="@dimen/service_right_icon_up_and_down_height"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="@dimen/service_right_icon_margin_right"
                        android:layout_toRightOf="@+id/textview_service_text_price_from_detail"
                        android:background="@drawable/service_icon_arrow_up" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relayout_service_from_beau_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EFF4F7"
                    android:gravity="center|right"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:gravity="center|right"
                        android:orientation="horizontal" >

                        <!-- android:background="@color/a4B4A47" -->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/button_go_apponit_home"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/button_go_apponit_home"
                                android:gravity="top|right" >

                                <TextView
                                    android:id="@+id/textview_service_from_beau_home"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@+id/textview_item_service_price_one"
                                    android:layout_centerVertical="true"
                                    android:text="¥"
                                    android:textColor="@color/aE2364A"
                                    android:textSize="10sp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/textview_service_text_price_beau_home"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/textview_item_service_up_one"
                                    android:includeFontPadding="false"
                                    android:text="0"
                                    android:textColor="@color/aE2364A"
                                    android:textSize="@dimen/service_price_size" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/button_go_apponit_home"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/button_go_apponit_home"
                                android:gravity="bottom"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/old_listprice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="原价"
                                    android:textColor="@color/a666666"
                                    android:textSize="@dimen/service_old_price" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/no_old_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="5dp"
                                android:layout_toLeftOf="@+id/button_go_apponit_home"
                                android:layout_toRightOf="@+id/textview_item_service_up_one"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/orange"
                                android:textSize="@dimen/service_price_size"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/button_go_apponit_home"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/service_button_height"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bg_button_service_apponit_ok"
                                android:gravity="center"
                                android:paddingBottom="3dp"
                                android:paddingLeft="9dp"
                                android:paddingRight="9dp"
                                android:paddingTop="3dp"
                                android:text="预约"
                                android:textColor="@color/white"
                                android:textSize="@dimen/item_service_appoinment_yue" />
