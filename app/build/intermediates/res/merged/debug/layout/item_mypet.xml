<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:custom="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_mypet_item"
    android:gravity="center_horizontal"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    android:background="@drawable/icon_selecttime_normal"
     >
    <com.haotang.pet.view.SelectableRoundedImageView 
        android:id="@+id/sriv_mypetitem_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
		android:scaleType="fitXY"
        android:background="@drawable/dog_icon_unnew"
        custom:sriv_left_bottom_corner_radius="5dip"
        custom:sriv_left_top_corner_radius="5dip"
        custom:sriv_right_bottom_corner_radius="5dip"
        custom:sriv_right_top_corner_radius="5dip"
        />
    <View 
        android:id="@+id/view_mypet_item_mask"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:background="@drawable/bg_transparent_round"
        android:visibility="gone"
        android:layout_alignLeft="@+id/sriv_mypetitem_image"
        android:layout_alignTop="@+id/sriv_mypetitem_image"
        />
    <TextView 
        android:id="@+id/tv_mypetitem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/a757575"
        android:singleLine="true"  
		android:ellipsize="end" 
        android:gravity="center"
        android:layout_below="@+id/sriv_mypetitem_image"
        android:layout_alignLeft="@+id/sriv_mypetitem_image"
        android:layout_alignRight="@+id/sriv_mypetitem_image"
        />

</RelativeLayout>
