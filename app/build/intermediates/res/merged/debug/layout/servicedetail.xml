<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <com.haotang.pet.pulltozoomview.PullToZoomScrollViewEx 
         android:id="@+id/pzs_servicedetail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        custom:zoomView="@layout/servicedetail_header"
        custom:contentView="@layout/servicedetail_content"
        />
    <RelativeLayout 
        android:id="@+id/rl_service_graylayer"
        android:layout_width="match_parent"
        android:layout_height="800dip"
        android:background="#55000000"
        android:visibility="gone"
        ></RelativeLayout>
    </RelativeLayout>

</LinearLayout>
