<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgloading"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_growth_setback"
        android:layout_width="272dp"
        android:layout_height="310dp"
        android:background="@drawable/coner_back_white"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="272dp"
            android:layout_height="157.5dp"
            android:src="@drawable/growth_top_icon" />
        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="充值成功"
            android:textColor="@color/a333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:gravity="bottom|center_horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜您获得"
                android:textColor="@color/a666666" 
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/textView_zengsong_grwoth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:text="" 
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成长值" 
                android:textColor="@color/a666666"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >

            <Button
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_shape_orange"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="到会员中心查看" />
        </LinearLayout>
    </LinearLayout>
 	<ImageView
        android:id="@+id/imageView_close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_close_gary" />
</LinearLayout>