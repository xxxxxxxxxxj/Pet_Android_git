<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/white"
    >
    <com.haotang.pet.view.SelectableRoundedImageView 
	    android:id="@+id/sriv_fostercareshoplist_item_image"
	    android:layout_width="85dip"
	    android:layout_height="85dip"
	    android:scaleType="centerCrop"
	    android:src="@drawable/icon_shop"
	    custom:sriv_left_top_corner_radius="25dip"
	    custom:sriv_right_top_corner_radius="25dip"
	    custom:sriv_left_bottom_corner_radius="25dip"
	    custom:sriv_right_bottom_corner_radius="25dip"
	    android:layout_margin="10dip"
	    />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/tv_fostercareshoplist_item_submit"
        android:layout_toRightOf="@+id/sriv_fostercareshoplist_item_image"
        android:layout_alignTop="@+id/sriv_fostercareshoplist_item_image"
        android:layout_alignBottom="@+id/sriv_fostercareshoplist_item_image"
        >
        <TextView 
            android:id="@+id/tv_fostercareshoplist_item_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宠物家朝青店"
            android:textSize="16sp"
            android:textColor="@color/a222222"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_weight="1"
            android:gravity="top"
            />
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView 
	            android:id="@+id/tv_fostercareshoplist_item_shopprice"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="¥120/天"
	            android:textSize="15sp"
	            android:textColor="@color/orange"
	            android:gravity="bottom"
	            android:layout_centerVertical="true"
	            />
            <TextView 
                android:id="@+id/tv_fostercareshoplist_item_shopprice_suffix"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="起"
	            android:textSize="11sp"
	            android:textColor="@color/orange"
	            android:gravity="bottom"
	            android:layout_alignBottom="@+id/tv_fostercareshoplist_item_shopprice"
	            android:layout_toRightOf="@+id/tv_fostercareshoplist_item_shopprice"
	            />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView 
	            android:id="@+id/iv_fostercareshoplist_item_shopdistance_icon"
	            android:layout_width="10.5dip"
	            android:layout_height="14dip"
	            android:scaleType="fitXY"
	            android:background="@drawable/add_service_address"
	            android:layout_centerVertical="true"
	            />
            <TextView 
                android:id="@+id/tv_fostercareshoplist_item_shopdistance"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="距宠物地址   5KM"
	            android:textSize="13sp"
	            android:textColor="@color/a757575"
	            android:gravity="bottom"
	            android:singleLine="true"
            	android:ellipsize="end"
            	android:layout_marginLeft="3dip"
            	android:layout_centerVertical="true"
	            android:layout_toRightOf="@+id/iv_fostercareshoplist_item_shopdistance_icon"
	            />
        </RelativeLayout>
        <TextView 
            android:id="@+id/tv_fostercareshoplist_item_shopaddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址：朝青花园地铁站向北500米路东"
            android:textSize="13sp"
            android:textColor="@color/a757575"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_weight="1"
            android:gravity="bottom"
            />
        
    </LinearLayout>
    
    
    <TextView 
        android:id="@+id/tv_fostercareshoplist_item_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预约"
        android:textSize="16sp"
        android:background="@drawable/bg_button_orager_oval"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="2dip"
        android:paddingBottom="2dip"
        android:layout_marginRight="10dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        />
     <!-- android:textColor="@color/white" -->
    
     <!-- android:layout_centerVertical="true" -->
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.8dip"
	    android:background="@color/bordergray"
	    android:layout_below="@+id/sriv_fostercareshoplist_item_image"
	    />
</RelativeLayout>
