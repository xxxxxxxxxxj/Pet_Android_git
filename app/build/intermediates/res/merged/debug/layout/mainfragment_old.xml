<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/bg_titlebar"
        >
        <LinearLayout 
            android:id="@+id/ll_home_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            >
            <ImageView 
                android:layout_width="10dip"
                android:layout_height="14dip"
                android:scaleType="fitXY"
                android:background="@drawable/icon_home_city"
                />
            <TextView 
                android:id="@+id/tv_home_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/a777777"
                android:textSize="14sp"
                android:text="北京市"
                android:layout_marginLeft="5dip"
                />
        </LinearLayout>
        
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宠物家"
        android:textColor="@color/a333333"
        android:textSize="@dimen/TITLE_SIZE"
        android:gravity="center"
        android:layout_centerInParent="true"
        />
    <Button 
        android:id="@+id/bt_home_other"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:background="@null"
        android:text="反馈"
        android:textColor="@color/orange"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:layout_marginRight="5dip"
        />
        
    </RelativeLayout>
    
        <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:orientation="vertical"
            >
            <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" 
		        android:layout_weight="2"
		        >
		
		        <android.support.v4.view.ViewPager
		            android:id="@+id/vp_home_pager"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent" 
		            />
		
		        <LinearLayout 
		            android:id="@+id/ll_home_pagepoint"
                   android:layout_width="match_parent"
                   android:layout_height="20dip"
                   android:orientation="horizontal"
                   android:background="#00000000"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:layout_alignParentBottom="true"
                   >
               	</LinearLayout>
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="1"
		        >
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:paddingTop="5dip"
		        android:paddingBottom="5dip"
		        >
		    <com.haotang.pet.view.MRelativeLayout
		        android:id="@+id/riv_home_bath"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:scaleType="fitXY"
		        android:background="@drawable/bg_button_orange_normal"
		        android:gravity="center_horizontal"
		        >
                   
               <ImageView 
                   android:id="@+id/iv_home_bath"
                   android:layout_width="56dip"
                   android:layout_height="60dip"
                   android:scaleType="fitXY"
                   android:background="@drawable/icon_bath_old"
                   android:layout_centerVertical="true"
                   />
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="洗澡"
                   android:textSize="18sp"
                   android:textColor="@color/white"
                   android:layout_toRightOf="@+id/iv_home_bath"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dip"
                   />
                   
               </com.haotang.pet.view.MRelativeLayout>
		    
		    <com.haotang.pet.view.MRelativeLayout
		        android:id="@+id/riv_home_beauty"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:scaleType="fitXY"
		        android:background="@drawable/bg_home_beauty"
		        android:gravity="center_horizontal"
		        android:layout_alignTop="@+id/riv_home_bath"
		        android:layout_toRightOf="@+id/riv_home_bath"
		        android:layout_marginLeft="5dip"
		        >
                <ImageView 
                    android:id="@+id/iv_home_beauty"
                    android:layout_width="56dip"
                    android:layout_height="60dip"
                    android:scaleType="fitXY"
                    android:background="@drawable/icon_beauty_old"
                    android:layout_centerVertical="true"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美容"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/iv_home_beauty"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    />
                   
                   
                   
               </com.haotang.pet.view.MRelativeLayout>
		    
		    <com.haotang.pet.view.MRelativeLayout
		        android:id="@+id/riv_home_feature"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:scaleType="fitXY"
		        android:background="@drawable/bg_home_bath"
		        android:gravity="center_horizontal"
		        android:layout_below="@+id/riv_home_beauty"
		        android:layout_alignLeft="@+id/riv_home_beauty"
		        android:layout_marginTop="5dip"
		        >
              <ImageView 
                  android:id="@+id/iv_home_beauty"
                  android:layout_width="56dip"
                  android:layout_height="60dip"
                  android:scaleType="fitXY"
                  android:background="@drawable/icon_home_feature"
                  android:layout_centerVertical="true"
                  />
              <TextView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="洁牙\nSPA"
                  android:textSize="18sp"
                  android:textColor="@color/white"
                  android:layout_toRightOf="@+id/iv_home_beauty"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="10dip"
                  />
                   
               </com.haotang.pet.view.MRelativeLayout>
		    
		    <com.haotang.pet.view.MRelativeLayout
		        android:id="@+id/riv_home_fostercare"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:scaleType="fitXY"
		        android:background="@drawable/bg_home_health"
		        android:gravity="center_horizontal"
		        android:layout_below="@+id/riv_home_bath"
		        android:layout_alignLeft="@+id/riv_home_bath"
		        android:layout_marginTop="5dip"
		        >
               <ImageView 
                   android:id="@+id/iv_home_health"
                   android:layout_width="56dip"
                   android:layout_height="60dip"
                   android:scaleType="fitXY"
                   android:background="@drawable/icon_home_fostercare"
                   android:layout_centerVertical="true"
                   />
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="寄养"
                   android:textSize="18sp"
                   android:textColor="@color/white"
                   android:layout_toRightOf="@+id/iv_home_health"
                   android:layout_centerVertical="true"
                   android:layout_marginLeft="10dip"
                   />
                   
               </com.haotang.pet.view.MRelativeLayout>
		   
		    <com.haotang.pet.view.MRelativeLayout
		        android:id="@+id/riv_home_member"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:scaleType="fitXY"
		        android:background="@drawable/bg_home_knowledge"
		        android:gravity="center_horizontal"
		        android:layout_toRightOf="@+id/riv_home_fostercare"
		        android:layout_below="@+id/riv_home_feature"
		        android:layout_marginTop="5dip"
		        android:layout_marginLeft="5dip"
		        >
                <ImageView 
                    android:id="@+id/iv_home_knowledge"
                    android:layout_width="56dip"
                    android:layout_height="60dip"
                    android:scaleType="fitXY"
                    android:background="@drawable/icon_home_member"
                    android:layout_centerVertical="true"
                    />
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@+id/iv_home_knowledge"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    />
                   
               </com.haotang.pet.view.MRelativeLayout>
		    	
		    </RelativeLayout>
		    <ImageButton 
		        android:id="@+id/ib_main_gift"
		        android:layout_width="68dip"
		        android:layout_height="55dip"
		        android:scaleType="centerCrop"
		        android:background="@drawable/icon_gift"
		        android:layout_alignParentRight="true"
		        android:layout_alignParentBottom="true"
		        android:layout_marginBottom="-5dip"
		        android:layout_marginRight="-5dip"
		        android:visibility="gone"
		        />
		    </RelativeLayout>
            
        </LinearLayout>
    
    
</LinearLayout>
