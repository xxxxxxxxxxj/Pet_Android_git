                        />
                    <TextView 
                        android:id="@+id/tv_servicedetail_serviceitems_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:layout_marginLeft="3dip"
                        android:textColor="@color/abdbdbd"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_servicedetail_serviceitems_7"
                        />
                </RelativeLayout>
                <RelativeLayout 
                    android:id="@+id/rl_servicedetail_serviceitems_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rl_servicedetail_serviceitems_7"
                    android:layout_alignTop="@+id/rl_servicedetail_serviceitems_5"
                    android:layout_alignBottom="@+id/rl_servicedetail_serviceitems_5"
                    android:layout_marginLeft="12dip"
                    >
                    <ImageView 
                        android:id="@+id/iv_servicedetail_serviceitems_8"
                        android:layout_width="14dip"
                        android:layout_height="14dip"
                        android:scaleType="fitXY"
                        android:background="@drawable/icon_serviceitem_selected"
                        android:layout_centerVertical="true"
                        />
                    <TextView 
                        android:id="@+id/tv_servicedetail_serviceitems_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:layout_marginLeft="3dip"
                        android:textColor="@color/abdbdbd"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_servicedetail_serviceitems_8"
                        />
                </RelativeLayout>
                
            </RelativeLayout>
            
            <TextView 
                android:id="@+id/tv_servicedetail_usedtime_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="耗时："
                android:textColor="@color/abdbdbd"
                android:textSize="17sp"
                android:layout_below="@+id/rl_servicedetail_serviceitems"
                android:layout_alignLeft="@+id/tv_servicedetail_servicedes"
                android:visibility="gone"
                android:layout_marginTop="15dip"
                />
            <TextView 
                android:id="@+id/tv_servicedetail_usedtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0分钟"
                android:textColor="@color/orange"
                android:textSize="17sp"
                android:visibility="gone"
                android:layout_toRightOf="@+id/tv_servicedetail_usedtime_pre"
                android:layout_alignTop="@+id/tv_servicedetail_usedtime_pre"
                android:layout_alignBottom="@+id/tv_servicedetail_usedtime_pre"
                />
            <TextView 
                android:id="@+id/tv_servicedetail_keeptime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0天"
                android:textColor="@color/orange"
                android:textSize="17sp"
                android:visibility="gone"
                android:layout_alignTop="@+id/tv_servicedetail_usedtime_pre"
                android:layout_alignBottom="@+id/tv_servicedetail_usedtime_pre"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dip"
                />
            <TextView 
                android:id="@+id/tv_servicedetail_keeptime_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保持："
                android:textColor="@color/abdbdbd"
                android:visibility="gone"
                android:textSize="17sp"
                android:layout_toLeftOf="@+id/tv_servicedetail_keeptime"
                android:layout_alignTop="@+id/tv_servicedetail_usedtime_pre"
                android:layout_alignBottom="@+id/tv_servicedetail_usedtime_pre"
                />
            <View 
                android:id="@+id/view_servicedetail_1"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/bggray"
                android:layout_alignLeft="@+id/tv_servicedetail_servicedes"
                android:layout_below="@+id/tv_servicedetail_usedtime_pre"
                android:layout_marginTop="13dip"
                />
            <RelativeLayout 
                android:id="@+id/rl_servicedetail_pet"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:background="@color/bggray"
                android:layout_below="@+id/view_servicedetail_1"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="适用宠物"
                    android:textColor="@color/a222222"
                    android:textSize="17sp"
                    android:layout_centerVertical="true"
                    />
                <TextView 
                    android:id="@+id/tv_servicedetail_pet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/abdbdbd"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_servicedetail_pet_rightarrow"
                    />
                <ImageView 
                    android:id="@+id/iv_servicedetail_pet_rightarrow"
                    android:layout_width="20dip"
                    android:layout_height="30dip"
                    android:scaleType="fitXY"
                    android:background="@drawable/icon_rightarrow"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
             </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:padding="15dp"
            android:background="@color/white">
            <TextView 
                android:id="@+id/to_be_use_pet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:background="@color/bggray" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" 
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/abdbdbd"
                    android:textSize="17sp"
                    android:text="耗时:"/>
                <TextView 
                    android:id="@+id/to_use_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                	android:textColor="@color/orange"
                	android:textSize="17sp"      
                	android:layout_marginLeft="5dp"              
                    android:text=" "/>
            </LinearLayout>

            <LinearLayout
  				android:layout_width="0dp"
                android:layout_weight="1"                
                android:layout_height="match_parent"
                android:gravity="right" >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/abdbdbd"
                	android:textSize="17sp"
                    android:text="保持:"/>
                <TextView 
                    android:id="@+id/hold_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                	android:textSize="17sp"   
                	android:layout_marginLeft="5dp"
                    android:text=" "/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="bottom">

            <Button
                android:id="@+id/button_to_tel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_button_orange"
                android:text="电话咨询"
                android:textSize="18sp"
                android:textColor="@color/white" />

        </LinearLayout>

</LinearLayout>
