                >
                <TextView 
                    android:id="@+id/tv_servicedetail_serviceitems_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="服务内容"
                    android:padding="10dip"
                    android:textSize="17sp"
                    android:background="@color/bggray"
                    android:textColor="@color/a222222"
                    />
                <RelativeLayout 
                    android:id="@+id/rl_servicedetail_serviceitems_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:paddingLeft="10dp"
                    android:layout_below="@+id/tv_servicedetail_serviceitems_title"
                    android:layout_marginTop="8dip"
                    >
                    <ImageView 
                        android:id="@+id/iv_servicedetail_serviceitems_1"
                        android:layout_width="14dip"
                        android:layout_height="14dip"
                        android:scaleType="fitXY"
                        android:background="@drawable/icon_serviceitem_selected"
                        android:layout_centerVertical="true"
                        />
                    <TextView 
                        android:id="@+id/tv_servicedetail_serviceitems_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/abdbdbd"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dip"
                        android:layout_toRightOf="@+id/iv_servicedetail_serviceitems_1"
                        />
                    
                </RelativeLayout>
                <RelativeLayout 
                    android:id="@+id/rl_servicedetail_serviceitems_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rl_servicedetail_serviceitems_1"
                    android:layout_alignTop="@+id/rl_servicedetail_serviceitems_1"
                    android:layout_alignBottom="@+id/rl_servicedetail_serviceitems_1"
                    android:layout_marginLeft="12dip"
                    >
                    <ImageView 
                        android:id="@+id/iv_servicedetail_serviceitems_2"
                        android:layout_width="14dip"
                        android:layout_height="14dip"
                        android:scaleType="fitXY"
                        android:background="@drawable/icon_serviceitem_selected"
                        android:layout_centerVertical="true"
                        />
                    <TextView 
                        android:id="@+id/tv_servicedetail_serviceitems_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:layout_marginLeft="3dip"
                        android:textColor="@color/abdbdbd"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_servicedetail_serviceitems_2"
                        />
                </RelativeLayout>
                <RelativeLayout 
                    android:id="@+id/rl_servicedetail_serviceitems_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rl_servicedetail_serviceitems_2"
                    android:layout_alignTop="@+id/rl_servicedetail_serviceitems_1"
                    android:layout_alignBottom="@+id/rl_servicedetail_serviceitems_1"
                    android:layout_marginLeft="12dip"
                    >
                    <ImageView 
                        android:id="@+id/iv_servicedetail_serviceitems_3"
                        android:layout_width="14dip"
                        android:layout_height="14dip"
                        android:scaleType="fitXY"
                        android:background="@drawable/icon_serviceitem_selected"
                        android:layout_centerVertical="true"
                        />
                    <TextView 
                        android:id="@+id/tv_servicedetail_serviceitems_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/abdbdbd"
                        android:layout_marginLeft="3dip"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_servicedetail_serviceitems_3"
                        />
                </RelativeLayout>
                <RelativeLayout 
                    android:id="@+id/rl_servicedetail_serviceitems_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rl_servicedetail_serviceitems_3"
                    android:layout_alignTop="@+id/rl_servicedetail_serviceitems_1"
                    android:layout_alignBottom="@+id/rl_servicedetail_serviceitems_1"
                    android:layout_marginLeft="12dip"
                    >
                    <ImageView 
                        android:id="@+id/iv_servicedetail_serviceitems_4"
                        android:layout_width="14dip"
                        android:layout_height="14dip"
                        android:scaleType="fitXY"
                        android:background="@drawable/icon_serviceitem_selected"
                        android:layout_centerVertical="true"
                        />
                    <TextView 
                        android:id="@+id/tv_servicedetail_serviceitems_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/abdbdbd"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dip"
                        android:layout_toRightOf="@+id/iv_servicedetail_serviceitems_4"
                        />
                </RelativeLayout>
                <RelativeLayout 
                    android:id="@+id/rl_servicedetail_serviceitems_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_below="@+id/rl_servicedetail_serviceitems_1"
                    android:layout_marginTop="8dip"
                    >
                    <ImageView 
                        android:id="@+id/iv_servicedetail_serviceitems_5"
                        android:layout_width="14dip"
                        android:layout_height="14dip"
                        android:scaleType="fitXY"
                        android:background="@drawable/icon_serviceitem_selected"
                        android:layout_centerVertical="true"
                        />
                    <TextView 
                        android:id="@+id/tv_servicedetail_serviceitems_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:layout_marginLeft="3dip"
                        android:textColor="@color/abdbdbd"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_servicedetail_serviceitems_5"
                        />
                </RelativeLayout>
                <RelativeLayout 
                    android:id="@+id/rl_servicedetail_serviceitems_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rl_servicedetail_serviceitems_5"
                    android:layout_alignTop="@+id/rl_servicedetail_serviceitems_5"
                    android:layout_alignBottom="@+id/rl_servicedetail_serviceitems_5"
                    android:layout_marginLeft="12dip"
                    >
                    <ImageView 
                        android:id="@+id/iv_servicedetail_serviceitems_6"
                        android:layout_width="14dip"
                        android:layout_height="14dip"
                        android:scaleType="fitXY"
                        android:background="@drawable/icon_serviceitem_selected"
                        android:layout_centerVertical="true"
                        />
                    <TextView 
                        android:id="@+id/tv_servicedetail_serviceitems_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:layout_marginLeft="3dip"
                        android:textColor="@color/abdbdbd"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_servicedetail_serviceitems_6"
                        />
                </RelativeLayout>
                <RelativeLayout 
                    android:id="@+id/rl_servicedetail_serviceitems_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/rl_servicedetail_serviceitems_6"
                    android:layout_alignTop="@+id/rl_servicedetail_serviceitems_5"
                    android:layout_alignBottom="@+id/rl_servicedetail_serviceitems_5"
                    android:layout_marginLeft="12dip"
                    >
                    <ImageView 
                        android:id="@+id/iv_servicedetail_serviceitems_7"
                        android:layout_width="14dip"
                        android:layout_height="14dip"
                        android:scaleType="fitXY"
                        android:background="@drawable/icon_serviceitem_selected"
