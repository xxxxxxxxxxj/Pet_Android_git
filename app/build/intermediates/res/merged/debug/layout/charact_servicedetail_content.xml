<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
   
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <ImageView 
                android:id="@+id/iv_charactdetail_image"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:scaleType="fitXY"
                android:background="@drawable/icon_production_default"
                />
	        <TextView 
	            android:id="@+id/tv_servicedetail_price"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="￥0.00"
	            android:textStyle="bold"
	            android:textColor="@color/orange"
	            android:textSize="22sp"
	            android:layout_marginTop="10dip"
	            android:layout_marginLeft="10dip"
	            android:layout_below="@+id/iv_charactdetail_image"
	            />
	        <RelativeLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/tv_servicedetail_price"
	            android:layout_alignBottom="@+id/tv_servicedetail_price"
	            android:layout_marginLeft="15dip"
	            >
	            <TextView 
	            android:id="@+id/tv_servicedetail_originalprice"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="原价：￥0.00"
	            android:textColor="@color/abdbdbd"
	            android:textSize="14sp"
	            android:layout_centerVertical="true"
	            android:visibility="gone"
	            android:gravity="bottom"
	            />
	            <View 
	                android:layout_width="wrap_content"
	                android:layout_height="1dip"
	                android:background="@color/abdbdbd"
	                android:layout_alignLeft="@+id/tv_servicedetail_originalprice"
	                android:layout_alignRight="@+id/tv_servicedetail_originalprice"
	                android:layout_centerVertical="true"
	                android:visibility="gone"
	                />
	        </RelativeLayout>
	        <TextView 
	            android:id="@+id/tv_servicedetail_servicedes"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text=""
	            android:textSize="15sp"
	            android:textColor="@color/a757575"
	            android:layout_marginLeft="10dip"
	            android:layout_marginRight="10dip"
	            android:layout_marginTop="10dip"
	            android:layout_below="@+id/tv_servicedetail_price"
	            />
            <RelativeLayout 
                android:id="@+id/rl_servicedetail_serviceitems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
