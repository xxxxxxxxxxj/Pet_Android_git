<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_all"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bggray"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView_login_message_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/login_message_show"
            android:textColor="@color/a777777"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/et_userid_num"
            android:layout_width="0dp"
            android:layout_height="45dip"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@drawable/et_login_selector"
            android:ems="10"
            android:hint="@string/login_phone_num_write"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingLeft="20dp"
            android:textColor="@color/a777777"
            android:textColorHint="@color/a666666"
            android:textSize="16sp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/bt_get"
            android:layout_width="0dp"
            android:layout_height="45dip"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_picked"
            android:gravity="center|center_vertical"
            android:text="获取验证码"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <EditText
            android:id="@+id/edt_verifkey"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/et_login_selector"
            android:ems="10"
            android:hint="@string/login_phone_num_to_compare"
            android:maxLength="4"
            android:numeric="integer|signed"
            android:paddingLeft="20dp"
            android:textColor="@color/a777777"
            android:textColorHint="@color/a666666"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_login_agree"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_login_agree"
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:background="@drawable/complaint_reason"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意"
                android:textColor="@color/a888888"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_oo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《宠物家服务协议》"
            android:textColor="@color/aBB996C"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_login_sure"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dip"
            android:background="@drawable/bg_button_orange"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/login_sure"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>